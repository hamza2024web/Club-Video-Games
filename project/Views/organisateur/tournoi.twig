                                <div class="grid grid-cols-2 gap-2">
                                    <div>
                                        <input type="text" name="prize_first" placeholder="1er place %" class="form-input w-full border border-gray-300 rounded-lg px-4 py-2.5 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent">
                                    </div>
                                    <div>
                                        <input type="text" name="prize_second" placeholder="2ème place %" class="form-input w-full border border-gray-300 rounded-lg px-4 py-2.5 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent">
                                    </div>
                                    <div>
                                        <input type="text" name="prize_third" placeholder="3ème place %" class="form-input w-full border border-gray-300 rounded-lg px-4 py-2.5 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent">
                                    </div>
