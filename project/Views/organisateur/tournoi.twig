                        </div>
                    </div>
                    
                    <!-- Registration Settings -->
                    <div class="col-span-2 md:col-span-1 bg-gray-50 p-4 rounded-lg">
                        <h4 class="text-md font-semibold text-gray-700 mb-3 flex items-center">
                            <i class="fas fa-user-plus text-purple-500 mr-2"></i> 
                            Paramètres d'inscription
                        </h4>
                        <div class="space-y-4">
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">Date d'ouverture des inscriptions</label>
                                <input type="date" name="registration_start" class="form-input w-full border border-gray-300 rounded-lg px-4 py-2.5 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent">
                            </div>
                            
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">Date de clôture des inscriptions</label>
                                <input type="date" name="registration_end" class="form-input w-full border border-gray-300 rounded-lg px-4 py-2.5 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent">
                            </div>
                            
                            <div class="flex items-center">
                                <input id="registration_fee_toggle" type="checkbox" class="h-4 w-4 text-purple-600 focus:ring-purple-500 border-gray-300 rounded">
                                <label for="registration_fee_toggle" class="ml-2 block text-sm text-gray-700">Frais d'inscription</label>
                            </div>
                            
                            <div id="fee_input" class="hidden">
                                <label class="block text-sm font-medium text-gray-700 mb-1">Montant (€)</label>
                                <input type="number" name="registration_fee" placeholder="Ex: 10" min="0" class="form-input w-full border border-gray-300 rounded-lg px-4 py-2.5 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent">
                            </div>
                            
                        </div>
                    </div>
                    
                    <!-- Rules & Settings Section -->
                    <div class="col-span-2 bg-gray-50 p-4 rounded-lg">
                        <h4 class="text-md font-semibold text-gray-700 mb-3 flex items-center">
                            <i class="fas fa-gavel text-purple-500 mr-2"></i> 
                            Règles et paramètres
                        </h4>
                        <div class="space-y-4">
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">Description du tournoi</label>
                                <textarea name="description" rows="3" placeholder="Décrivez votre tournoi..." class="form-input w-full border border-gray-300 rounded-lg px-4 py-2.5 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent"></textarea>
                            </div>
                            
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">Règles spécifiques</label>
                                <textarea name="rules" rows="4" placeholder="Règles du tournoi..." class="form-input w-full border border-gray-300 rounded-lg px-4 py-2.5 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent"></textarea>
                            </div>
                            
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-1">Stream du tournoi</label>
                                    <input type="url" name="stream_url" placeholder="https://twitch.tv/..." class="form-input w-full border border-gray-300 rounded-lg px-4 py-2.5 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent">
                                </div>
                                
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-1">Discord du tournoi</label>
                                    <input type="url" name="discord_url" placeholder="https://discord.gg/..." class="form-input w-full border border-gray-300 rounded-lg px-4 py-2.5 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent">
                                </div>
                            </div>
                            
                        </div>
                    </div>
                </div>
                
                <!-- Form Actions -->
                <div class="mt-6 flex justify-end space-x-3">
                    <button type="button" onclick="closeTournamentModal()" class="px-5 py-2.5 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-lg transition duration-300">
                        Annuler
                    </button>
                    <button type="submit" class="px-5 py-2.5 bg-gradient-to-r from-purple-600 to-indigo-600 hover:from-purple-700 hover:to-indigo-700 text-white rounded-lg shadow-sm transition duration-300 flex items-center">
                        <i class="fas fa-plus-circle mr-2"></i> Créer le tournoi
                    </button>
                </div>
            </form>
        </div>
    </div>
    
    <!-- JavaScript Logic -->
    <script>
        // Modal Handling pour le formulaire de création
        function openTournamentModal() {
            const modal = document.getElementById('tournamentModal');
            const modalContent = document.getElementById('modalContent');
            
            modal.classList.remove('hidden');
            
            // Animation timing
            setTimeout(() => {
                modalContent.classList.remove('scale-95', 'opacity-0');
                modalContent.classList.add('scale-100', 'opacity-100');
            }, 10);
        }

        function closeTournamentModal() {
            const modal = document.getElementById('tournamentModal');
            const modalContent = document.getElementById('modalContent');
            
            modalContent.classList.remove('scale-100', 'opacity-100');
            modalContent.classList.add('scale-95', 'opacity-0');
            
            setTimeout(() => {
                modal.classList.add('hidden');
            }, 300);
        }
        
        // Updated Tournament Details Modal Handling
        function openTournamentDetails(tournamentId) {
            // Check if the modal exists
            const modal = document.getElementById(`tournamentDetailsModal-${tournamentId}`);
            if (!modal) {
                console.error(`Tournament details modal for ID ${tournamentId} not found`);
                return;
            }

            const modalContent = document.getElementById(`modalContent-${tournamentId}`);
            if (!modalContent) {
                console.error(`Tournament details modal content for ID ${tournamentId} not found`);
                return;
            }
            
            // Afficher le modal
            modal.classList.remove('hidden');
            
            // Animation du contenu
            setTimeout(() => {
                modalContent.classList.remove('scale-95', 'opacity-0');
                modalContent.classList.add('scale-100', 'opacity-100');
            }, 10);
            
            // Empêcher le défilement du body
            document.body.style.overflow = 'hidden';
        }

        function closeTournamentDetails(tournamentId) {
            // Check if the modal exists
            const modal = document.getElementById(`tournamentDetailsModal-${tournamentId}`);
            if (!modal) {
                console.error(`Tournament details modal for ID ${tournamentId} not found`);
                return;
            }

            const modalContent = document.getElementById(`modalContent-${tournamentId}`);
            if (!modalContent) {
                console.error(`Tournament details modal content for ID ${tournamentId} not found`);
                return;
            }
            
            // Animation de fermeture
            modalContent.classList.remove('scale-100', 'opacity-100');
            modalContent.classList.add('scale-95', 'opacity-0');
            
            // Cacher le modal après l'animation
            setTimeout(() => {
                modal.classList.add('hidden');
                document.body.style.overflow = '';
            }, 200);
        }

        // Add error handling to tournament card click events
        document.addEventListener('DOMContentLoaded', function() {
            const tournamentCards = document.querySelectorAll('[onclick^="openTournamentDetails"]');
            
            tournamentCards.forEach(card => {
                card.addEventListener('click', function() {
                    const tournamentId = this.getAttribute('onclick').match(/\d+/);
                    if (tournamentId) {
                        openTournamentDetails(tournamentId[0]);
                    } else {
                        console.error('Could not extract tournament ID from onclick attribute');
                    }
                });
            });
        });

        // Fee Toggle Logic
        document.addEventListener('DOMContentLoaded', function() {
            const feeToggle = document.getElementById('registration_fee_toggle');
            const feeInput = document.getElementById('fee_input');
            
            // Vérifier si les éléments existent avant d'ajouter des écouteurs d'événements
            if (feeToggle && feeInput) {
                feeToggle.addEventListener('change', function() {
                    if (this.checked) {
                        feeInput.classList.remove('hidden');
                    } else {
                        feeInput.classList.add('hidden');
                        // Réinitialiser la valeur du champ lorsqu'il est caché
                        const feeInputField = document.querySelector('input[name="registration_fee"]');
                        if (feeInputField) {
                            feeInputField.value = '0';
                        }
                    }
                });
            }
            
            // Tab switching logic pour les onglets principaux
            const tabButtons = document.querySelectorAll('.tab-button');
            
            tabButtons.forEach(button => {
                button.addEventListener('click', function() {
                    // Remove active class from all tabs
                    tabButtons.forEach(btn => btn.classList.remove('active'));
                    
                    // Add active class to clicked tab
                    this.classList.add('active');
                });
            });
            
            // Tab switching logic pour les modals de détail
            const modalTabButtons = document.querySelectorAll('[class^="tab-button-"]');
            
            modalTabButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const tournamentId = this.getAttribute('data-tab').split('-')[1];
                    const tabId = this.getAttribute('data-tab');
                    
                    // Retirer la classe active de tous les boutons du même groupe
                    document.querySelectorAll(`.tab-button-${tournamentId}`).forEach(btn => {
                        btn.classList.remove('active', 'text-purple-600', 'border-b-2', 'border-purple-600');
                        btn.classList.add('text-gray-500');
                    });
                    
                    // Ajouter la classe active au bouton cliqué
                    this.classList.add('active', 'text-purple-600', 'border-b-2', 'border-purple-600');
                    this.classList.remove('text-gray-500');
                    
                    // Cacher tous les contenus de tab du même groupe
                    document.querySelectorAll(`.tab-content-${tournamentId}`).forEach(content => {
                        content.classList.add('hidden');
                    });
                    
                    // Afficher le contenu correspondant
                    document.getElementById(tabId).classList.remove('hidden');
                });
            });
            
            // Form validation
            const tournamentForm = document.querySelector('form[action="organisateur/addTournoi"]');
            
            if (tournamentForm) {
                tournamentForm.addEventListener('submit', function(e) {
                    e.preventDefault();
                    
                    // Get required fields
                    const tournamentName = this.querySelector('input[name="name"]').value;
                    const game = this.querySelector('select[name="game"]').value;
                    const status = this.querySelector('select[name="status"]').value;
                    const format = this.querySelector('select[name="format"]').value;
                    const startDate = this.querySelector('input[name="start_date"]').value;
                    const endDate = this.querySelector('input[name="end_date"]').value;
                    const maxParticipants = this.querySelector('input[name="max_participants"]').value;
                    
                    // Simple validation
                    if (!tournamentName || !game || !format || !status || !startDate || !endDate || !maxParticipants) {
                        Swal.fire({
                            title: 'Formulaire incomplet',
                            text: 'Veuillez remplir tous les champs obligatoires',
                            icon: 'error',
                            confirmButtonColor: '#8b5cf6'
                        });
                        return;
                    }
                    
                    // Check that end date is after start date
                    if (new Date(endDate) <= new Date(startDate)) {
                        Swal.fire({
                            title: 'Erreur de date',
                            text: 'La date de fin doit être postérieure à la date de début',
                            icon: 'error',
                            confirmButtonColor: '#8b5cf6'
                        });
                        return;
                    }
                    
                    // Si feeToggle est coché mais aucun montant n'est fourni
                    if (feeToggle && feeToggle.checked) {
                        const feeAmount = this.querySelector('input[name="registration_fee"]').value;
                        if (!feeAmount || feeAmount <= 0) {
                            Swal.fire({
                                title: 'Frais d\'inscription invalides',
                                text: 'Veuillez indiquer un montant valide pour les frais d\'inscription',
                                icon: 'error',
                                confirmButtonColor: '#8b5cf6'
                            });
                            return;
                        }
                    }
                    
                    // Si toutes les validations passent, soumettre le formulaire
                    Swal.fire({
                        title: 'Création en cours',
                        text: 'Veuillez patienter pendant que nous créons votre tournoi...',
                        allowOutsideClick: false,
                        showConfirmButton: false,
                        willOpen: () => {
                            Swal.showLoading();
                        }
                    });
                    
                    // Soumettre le formulaire
                    this.submit();
                });
            }
            
            // Gestion des paramètres d'URL pour les notifications
            const urlParams = new URLSearchParams(window.location.search);
            
            // Notification de tournoi créé avec succès
            if (urlParams.has('Tournoi%20Created%20successfully!') || urlParams.has('Tournoi Created successfully!')) {
                Swal.fire({
                    title: "Succès !",
                    text: "Tournoi créé avec succès !",
                    icon: "success",
                    confirmButtonText: "OK",
                    confirmButtonColor: '#8b5cf6',
                    timer: 3000 
                }).then(() => {
                    // Nettoyer l'URL
                    const url = new URL(window.location.href);
                    url.search = '';
                    window.history.replaceState({}, document.title, url);
                });
            }
            
            // Notification d'échec de création de tournoi
            if (urlParams.has('Creation%20de%20votre%20tournoi%20echouée') || urlParams.has('Creation de votre tournoi echouée')) {
                Swal.fire({
                    title: 'Erreur de création',
                    text: 'La création de votre tournoi a échoué',
                    icon: 'error',
                    confirmButtonColor: '#8b5cf6'
                }).then(() => {
                    // Nettoyer l'URL
                    const url = new URL(window.location.href);
                    url.search = '';
                    window.history.replaceState({}, document.title, url);
                });
            }
            
            // Tournament card status highlighting
            const tournamentCards = document.querySelectorAll('.tournament-card');
            
            tournamentCards.forEach(card => {
                // Highlight the card when hovered
                card.addEventListener('mouseenter', function() {
                    this.classList.add('shadow-md');
                });
                
                card.addEventListener('mouseleave', function() {
                    this.classList.remove('shadow-md');
                });
            });
        });
    </script>
