<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GamersHub - Gestion de Club</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap');
        
        body {
            font-family: 'Poppins', sans-serif;
        }
        
        .stat-card {
            transition: all 0.3s ease;
        }
        
        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        }
        
        .sidebar-item {
            position: relative;
            transition: all 0.2s ease;
        }
        
        .sidebar-item:hover {
            background-color: rgba(255, 255, 255, 0.1);
        }
        
        .sidebar-item.active {
            background-color: rgba(139, 92, 246, 0.9);
        }
        
        .sidebar-icon {
            transition: all 0.3s ease;
        }
        
        .sidebar-item:hover .sidebar-icon {
            transform: translateX(5px);
        }
        
        .form-input:focus {
            border-color: #8b5cf6;
            box-shadow: 0 0 0 3px rgba(139, 92, 246, 0.2);
        }
    </style>
</head>
<body class="bg-gray-100">
    <!-- Sidebar Navigation -->
    <div class="flex">
        <aside class="bg-gradient-to-br from-indigo-900 via-purple-800 to-indigo-900 text-white w-64 min-h-screen flex flex-col fixed">
            <div class="p-4 border-b border-indigo-800">
                <div class="flex items-center">
                    <i class="fas fa-gamepad text-2xl mr-3 text-purple-300"></i>
                    <h2 class="text-xl font-bold">GamersHub</h2>
                </div>
            </div>
            
            <div class="p-4 border-b border-indigo-800">
                <div class="flex items-center space-x-3">
                    <img src="{{profile.profile_image}}" alt="Avatar" class="w-10 h-10 rounded-full bg-gray-500 border-2 border-purple-300">
                    <div>
                        <p class="font-semibold">{{profile.name}}</p>
                        <p class="text-sm text-purple-200">Gamer Tag : {{profile.gamer_tag}}</p>
                    </div>
                </div>
            </div>
            
            <nav class="mt-6 flex-1 px-2">
                <div class="px-4 py-2 text-xs text-purple-300 uppercase tracking-wider font-semibold">
                    Tableau de bord
                </div>
                <a href="#" class="sidebar-item flex items-center px-4 py-3 text-gray-100 hover:text-white rounded-lg mb-1">
                    <i class="fas fa-tachometer-alt w-6 sidebar-icon text-purple-300"></i>
                    <span>Vue d'ensemble</span>
                </a>
                
                <div class="px-4 py-2 text-xs text-purple-300 uppercase tracking-wider font-semibold">
                    Gestion
                </div>
                <a href="#" class="sidebar-item active flex items-center px-4 py-3 text-white rounded-lg mb-1">
                    <i class="fas fa-users w-6 sidebar-icon text-purple-300"></i>
                    <span>Gestion du club</span>
                </a>

                <a href="/profile" class="sidebar-item flex items-center px-4 py-3 text-gray-100 hover:text-white rounded-lg mb-1">
                    <i class="fas fa-user w-6 sidebar-icon text-purple-300"></i>
                    <span>Profil</span>
                </a>
                
                <div class="px-4 py-2 text-xs text-purple-300 uppercase tracking-wider font-semibold">
                    Événements
                </div>
                <a href="#" class="sidebar-item flex items-center px-4 py-3 text-gray-100 hover:text-white rounded-lg mb-1">
                    <i class="fas fa-calendar-alt w-6 sidebar-icon text-purple-300"></i>
                    <span>Événement</span>
                </a>
                <a href="#" class="sidebar-item flex items-center px-4 py-3 text-gray-100 hover:text-white rounded-lg mb-1">
                    <i class="fas fa-trophy w-6 sidebar-icon text-purple-300"></i>
                    <span>Tournois</span>
                </a>
                <a href="#" class="sidebar-item flex items-center px-4 py-3 text-gray-100 hover:text-white rounded-lg mb-1">
                    <i class="fas fa-gamepad w-6 sidebar-icon text-purple-300"></i>
                    <span>Jeux</span>
                </a>
                
                <div class="px-4 py-2 text-xs text-purple-300 uppercase tracking-wider font-semibold">
                    Paramètres
                </div>
                <a href="#" class="sidebar-item flex items-center px-4 py-3 text-gray-100 hover:text-white rounded-lg mb-1">
                    <i class="fas fa-cog w-6 sidebar-icon text-purple-300"></i>
                    <span>Configuration</span>
                </a>
                <a href="/logout" class="sidebar-item flex items-center px-4 py-3 text-gray-100 hover:text-white rounded-lg mb-1">
                    <i class="fas fa-sign-out-alt w-6 sidebar-icon text-purple-300"></i>
                    <span>Déconnexion</span>
                </a>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="ml-64 flex-1">
            <!-- Top Navigation -->
            <header class="bg-white shadow-sm">
                <div class="flex justify-between items-center px-6 py-4">
                    <h1 class="text-2xl font-bold text-gray-800">Gestion du Club</h1>
                    <div class="flex items-center space-x-4">
                        <button class="text-gray-500 hover:text-gray-700 relative">
                            <i class="fas fa-bell text-lg"></i>
                            <span class="absolute -top-1 -right-1 bg-red-500 text-white rounded-full w-4 h-4 flex items-center justify-center text-xs">3</span>
                        </button>
                        <button class="text-gray-500 hover:text-gray-700 relative">
                            <i class="fas fa-envelope text-lg"></i>
                            <span class="absolute -top-1 -right-1 bg-blue-500 text-white rounded-full w-4 h-4 flex items-center justify-center text-xs">5</span>
                        </button>
                    </div>
                </div>
            </header>

            <!-- Content Area -->
            <div class="p-6">
                <!-- Club Info Card -->
                <div class="bg-white rounded-xl shadow-sm p-6 mb-6">
                    <div class="flex flex-col md:flex-row md:justify-between md:items-center gap-4">
                        <div class="flex items-center space-x-4">
                            <img src="{{club.logo}}" alt="Logo du club" class="w-20 h-20 rounded-xl bg-purple-100 border border-purple-200">
                            <div>
                                <h2 class="text-2xl font-bold text-gray-800">{{club.name}}</h2>
                                <p class="text-gray-600">Club fondé le {{club.date_de_creation}}</p>
                            </div>
                        </div>
                        <div class="flex flex-wrap gap-2">
                            <button onclick="showClub('{{ club.name }}', '{{ club.email }}', '{{ club.description }}', '{{ club.phone_club }}','{{ club.logo }}')" class="bg-gradient-to-r from-purple-600 to-indigo-600 hover:from-purple-700 hover:to-indigo-700 text-white px-4 py-2 rounded-lg flex items-center shadow-sm">
                                <i class="fas fa-edit mr-2"></i> Modifier le club
                            </button>
                            <button class="bg-gradient-to-r from-blue-500 to-blue-700 hover:from-blue-600 hover:to-blue-800 text-white px-4 py-2 rounded-lg flex items-center shadow-sm">
                                <i class="fas fa-cog mr-2"></i> Paramètres
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Stats Cards -->
                <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-6">
                    <div class="stat-card bg-white rounded-xl shadow-sm p-5 border-l-4 border-blue-500">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-gray-500 text-sm font-medium">Membres actifs</p>
                                <p class="text-3xl font-bold text-gray-800">87</p>
                            </div>
                            <div class="bg-blue-100 p-3 rounded-lg">
                                <i class="fas fa-users text-blue-600 text-xl"></i>
                            </div>
                        </div>
                        <div class="flex items-center mt-2">
                            <span class="text-green-500 text-sm"><i class="fas fa-arrow-up mr-1"></i>12%</span>
                            <span class="text-gray-500 text-sm ml-2">vs mois dernier</span>
                        </div>
                    </div>

                    <div class="stat-card bg-white rounded-xl shadow-sm p-5 border-l-4 border-green-500">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-gray-500 text-sm font-medium">Événements ce mois</p>
                                <p class="text-3xl font-bold text-gray-800">8</p>
                            </div>
                            <div class="bg-green-100 p-3 rounded-lg">
                                <i class="fas fa-calendar-alt text-green-600 text-xl"></i>
                            </div>
                        </div>
                        <div class="flex items-center mt-2">
                            <span class="text-green-500 text-sm"><i class="fas fa-arrow-up mr-1"></i>2</span>
                            <span class="text-gray-500 text-sm ml-2">vs mois dernier</span>
                        </div>
                    </div>

                    <div class="stat-card bg-white rounded-xl shadow-sm p-5 border-l-4 border-purple-500">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-gray-500 text-sm font-medium">Jeux disponibles</p>
                                <p class="text-3xl font-bold text-gray-800">54</p>
                            </div>
                            <div class="bg-purple-100 p-3 rounded-lg">
                                <i class="fas fa-gamepad text-purple-600 text-xl"></i>
                            </div>
                        </div>
                        <div class="flex items-center mt-2">
                            <span class="text-green-500 text-sm"><i class="fas fa-arrow-up mr-1"></i>3</span>
                            <span class="text-gray-500 text-sm ml-2">nouveaux jeux</span>
                        </div>
                    </div>

                    <div class="stat-card bg-white rounded-xl shadow-sm p-5 border-l-4 border-amber-500">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-gray-500 text-sm font-medium">Taux de participation</p>
                                <p class="text-3xl font-bold text-gray-800">78%</p>
                            </div>
                            <div class="bg-amber-100 p-3 rounded-lg">
                                <i class="fas fa-chart-line text-amber-600 text-xl"></i>
                            </div>
                        </div>
                        <div class="flex items-center mt-2">
                            <span class="text-red-500 text-sm"><i class="fas fa-arrow-down mr-1"></i>3%</span>
                            <span class="text-gray-500 text-sm ml-2">vs mois dernier</span>
                        </div>
                    </div>
                </div>

                <!-- Tabs -->
                <div class="mb-6">
                    <div class="border-b border-gray-200">
                        <nav class="flex space-x-8">
                            <button class="border-b-2 border-purple-600 text-purple-600 py-4 px-1 font-medium">
                                Informations générales
                            </button>
                            <button class="text-gray-500 hover:text-gray-700 hover:border-gray-300 py-4 px-1 font-medium">
                                Membres
                            </button>
                            <button class="text-gray-500 hover:text-gray-700 hover:border-gray-300 py-4 px-1 font-medium">
                                Statistiques
                            </button>
                            <button class="text-gray-500 hover:text-gray-700 hover:border-gray-300 py-4 px-1 font-medium">
                                Activités récentes
                            </button>
                        </nav>
                    </div>
                </div>

                <!-- Club Information Form -->
                <div class="bg-gradient-to-r from-purple-50 to-indigo-50 rounded-xl shadow-sm p-8 mb-6">
                    <h3 class="text-xl font-bold text-indigo-800 mb-6 flex items-center">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2 text-purple-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                        </svg>
                        Informations du club
                    </h3>
                    <form action="/clubForm" method="POST" enctype="multipart/form-data">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div class="md:col-span-2">
                                <label for="club_image" class="block text-sm font-medium text-indigo-700 mb-2">Image du club</label>
                                <div class="flex items-center space-x-4">
                                    <div class="w-20 h-20 rounded-full bg-gray-200 flex items-center justify-center overflow-hidden border-2 border-purple-300">
                                        <img src="{{club.logo|default('/images/placeholder.png')}}" alt="Club image" class="w-full h-full object-cover" id="image-preview">
                                    </div>
                                    <div class="flex-1">
                                        <label class="cursor-pointer inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg text-white bg-purple-600 hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 transition-colors">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                            </svg>
                                            Choisir une image
                                            <input type="file" name="logo" id="logo" accept="image/*" class="hidden" onchange="document.getElementById('image-preview').src = window.URL.createObjectURL(this.files[0])">
                                        </label>
                                        <p class="mt-1 text-xs text-gray-500">JPG, PNG or GIF, Taille max. 2MB</p>
                                    </div>
                                </div>
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-indigo-700 mb-1">Nom du club</label>
                                <input type="text" value="{{club.name}}" id="name" name="club_name" class="form-input w-full border border-gray-300 rounded-lg px-4 py-3 focus:outline-none">
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-indigo-700 mb-1">Email du club</label>
                                <div class="relative">
                                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                                        </svg>
                                    </div>
                                    <input type="email" name="email" id="email" value="{{club.email}}" class="form-input w-full border border-gray-300 rounded-lg pl-10 px-4 py-3 focus:outline-none">
                                </div>
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-indigo-700 mb-1">Téléphone</label>
                                <div class="relative">
                                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                                        </svg>
                                    </div>
                                    <input type="tel" name="phone_club" id="phone_club" value="{{club.phone_club}}" class="form-input w-full border border-gray-300 rounded-lg pl-10 px-4 py-3 focus:outline-none">
                                </div>
                            </div>
                            <div class="md:col-span-2">
                                <label class="block text-sm font-medium text-indigo-700 mb-1">Description</label>
                                <textarea rows="4" name="description" id="description" class="form-input w-full border border-gray-300 rounded-lg px-4 py-3 focus:outline-none">{{club.description}}</textarea>
                            </div>
                            <div class="md:col-span-2 mt-4 flex justify-end">
                                <button type="submit" class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-lg shadow-sm text-white bg-gradient-to-r from-purple-600 to-indigo-600 hover:from-purple-700 hover:to-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                    </svg>
                                    Enregistrer
                                </button>
                            </div>
                        </div>
                    </form>
                </div>

                <div id="clubInformations" class="hidden fixed inset-0 bg-gray-900 bg-opacity-50 flex items-center justify-center z-50">
                    <div id="modalContent" class="bg-white rounded-xl shadow-lg p-8 transform transition-all scale-95 opacity-0 w-full max-w-2xl">
                        <h3 class="text-xl font-bold text-indigo-800 mb-6">Informations du club</h3>
                        <form action="/clubForm" method="POST" enctype="multipart/form-data">
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                <div class="md:col-span-2">
                                    <label for="club_image" class="block text-sm font-medium text-indigo-700 mb-2">Image du club</label>
                                    <div class="flex items-center space-x-4">
                                        <div class="w-20 h-20 rounded-full bg-gray-200 flex items-center justify-center overflow-hidden border-2 border-purple-300">
                                            <img src="{{club.logo|default('/images/placeholder.png')}}" alt="Club image" class="w-full h-full object-cover" id="image-preview-modal">
                                        </div>
                                        <div class="flex-1">
                                            <label class="cursor-pointer inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg text-white bg-purple-600 hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 transition-colors">
                                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                                </svg>
                                                Choisir une image
                                                <input type="file" name="logo" id="logo-modal" accept="image/*" class="hidden" onchange="document.getElementById('image-preview-modal').src = window.URL.createObjectURL(this.files[0])">
                                            </label>
                                            <p class="mt-1 text-xs text-gray-500">JPG, PNG or GIF, Taille max. 2MB</p>
                                        </div>
                                    </div>
                                </div>
                                <div>
                                    <label class="block text-sm font-medium text-indigo-700 mb-1">Nom du club</label>
                                    <input type="text" id="name-modal" value="{{club.name}}" name="club_name" class="form-input w-full border border-gray-300 rounded-lg px-4 py-3 focus:outline-none">
                                </div>
                                <div>
                                    <label class="block text-sm font-medium text-indigo-700 mb-1">Email du club</label>
                                    <input type="email" id="email-modal" value="{{club.email}}" name="email" class="form-input w-full border border-gray-300 rounded-lg px-4 py-3 focus:outline-none">
                                </div>
                                <div>
                                    <label class="block text-sm font-medium text-indigo-700 mb-1">Téléphone</label>
                                    <input type="tel" id="phone_club-modal" value="{{club.phone_club}}" name="phone_club" class="form-input w-full border border-gray-300 rounded-lg px-4 py-3 focus:outline-none">
                                </div>
                                <div class="md:col-span-2">
                                    <label class="block text-sm font-medium text-indigo-700 mb-1">Description</label>
                                    <textarea id="description-modal" name="description" rows="4" class="form-input w-full border border-gray-300 rounded-lg px-4 py-3 focus:outline-none">{{club.description}}</textarea>
                                </div>
                                <div class="md:col-span-2 flex justify-end">
                                    <button type="button" onclick="closeAnnonces()" class="px-4 py-2 bg-gray-200 text-gray-800 rounded-lg mr-2 hover:bg-gray-300 transition-colors">Fermer</button>
                                    <button type="submit" class="px-4 py-2 bg-gradient-to-r from-purple-600 to-indigo-600 text-white rounded-lg hover:from-purple-700 hover:to-indigo-700 transition-colors">Enregistrer</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </main>
    </div>
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const urlParams = new URLSearchParams(window.location.search);
            if (urlParams.has('club_updated_successfully')) {
                Swal.fire({
                    title: "Success!",
                    text: "Club updated successfully!",
                    icon: "success",
                    confirmButtonText: "OK",
                    timer: 3000 
                }).then(()=> {
                    window.location.href = "/ClubManagement";
                });

            }
        });

        function showClub(name, email, description, phone_club, logo) {
            const modal = document.getElementById("clubInformations");
            const modalContent = document.getElementById("modalContent");

            // Use the correct IDs for the modal elements
            document.getElementById("name-modal").value = name;
            document.getElementById("email-modal").value = email;
            document.getElementById("description-modal").value = description;
            document.getElementById("phone_club-modal").value = phone_club;
            document.getElementById("image-preview-modal").src = logo;

            modal.classList.remove("hidden");

            requestAnimationFrame(() => {
                modalContent.classList.remove("scale-95", "opacity-0");
                modalContent.classList.add("scale-100", "opacity-100");
            });
        }

        function closeAnnonces() {
            const modal = document.getElementById("clubInformations");
            const modalContent = document.getElementById("modalContent");

            modalContent.classList.remove("scale-100", "opacity-100");
            modalContent.classList.add("scale-95", "opacity-0");

            setTimeout(() => {
                modal.classList.add("hidden");
            }, 300);
        }

        // Close modal when clicking outside
        document.getElementById("clubInformations").addEventListener("click", (e) => {
            if (e.target.id === "clubInformations") {
                closeAnnonces();
            }
        });

        // Close modal with Escape key
        document.addEventListener("keydown", (e) => {
            if (e.key === "Escape" && !document.getElementById("clubInformations").classList.contains("hidden")) {
                closeAnnonces();
            }
        });

    </script>
</body>
</html>