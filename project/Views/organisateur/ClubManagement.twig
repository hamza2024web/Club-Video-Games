                    </button>
                    
                    <div class="text-center text-xs text-gray-500 mt-2 flex items-center justify-center">
                        <i class="fas fa-shield-alt mr-2 text-green-500"></i>
                        Paiement 100% sécurisé
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const urlParams = new URLSearchParams(window.location.search);
            if (urlParams.has('club_updated_successfully')) {
                Swal.fire({
                    title: "Success!",
                    text: "Club updated successfully!",
                    icon: "success",
                    confirmButtonText: "OK",
                    timer: 3000 
                }).then(()=> {
                    window.location.href = "/ClubManagement";
                });

            }
        });

        function showClub(name, email, description, phone_club, logo) {
            const modal = document.getElementById("clubInformations");
            const modalContent = document.getElementById("modalContent");

            // Use the correct IDs for the modal elements
            document.getElementById("name-modal").value = name;
            document.getElementById("email-modal").value = email;
            document.getElementById("description-modal").value = description;
            document.getElementById("phone_club-modal").value = phone_club;
            document.getElementById("image-preview-modal").src = logo;

            modal.classList.remove("hidden");

            requestAnimationFrame(() => {
                modalContent.classList.remove("scale-95", "opacity-0");
                modalContent.classList.add("scale-100", "opacity-100");
            });
        }

        function closeAnnonces() {
            const modal = document.getElementById("clubInformations");
            const modalContent = document.getElementById("modalContent");

            modalContent.classList.remove("scale-100", "opacity-100");
            modalContent.classList.add("scale-95", "opacity-0");

            setTimeout(() => {
                modal.classList.add("hidden");
            }, 300);
        }

        document.getElementById("clubInformations").addEventListener("click", (e) => {
            if (e.target.id === "clubInformations") {
                closeAnnonces();
            }
        });

        // Close modal with Escape key
        document.addEventListener("keydown", (e) => {
            if (e.key === "Escape" && !document.getElementById("clubInformations").classList.contains("hidden")) {
                closeAnnonces();
            }
        });
                document.addEventListener('DOMContentLoaded', function() {
            const toggleButton = document.getElementById('sidebar-toggle');
            const sidebar = document.querySelector('.sidebar-expanded');
            const mainContent = document.querySelector('main');

            if (toggleButton && sidebar && mainContent) {
                // Function to toggle sidebar
                function toggleSidebar() {
                    sidebar.classList.toggle('sidebar-collapsed');
                    sidebar.classList.toggle('sidebar-expanded');
                    mainContent.classList.toggle('ml-64');
                    mainContent.classList.toggle('ml-20');

                    // Update localStorage
                    const isCollapsed = sidebar.classList.contains('sidebar-collapsed');
                    localStorage.setItem('sidebarCollapsed', isCollapsed);
                }

                // Add click event listener to toggle button
                toggleButton.addEventListener('click', toggleSidebar);

                // Check and apply initial state from localStorage
                const sidebarCollapsed = localStorage.getItem('sidebarCollapsed') === 'true';
                if (sidebarCollapsed) {
                    sidebar.classList.add('sidebar-collapsed');
                    sidebar.classList.remove('sidebar-expanded');
                    mainContent.classList.remove('ml-64');
                    mainContent.classList.add('ml-20');
                }
            }
        });

        // Additional CSS to support sidebar collapse
        const sidebarStyle = document.createElement('style');
        sidebarStyle.textContent = `
        .sidebar-collapsed {
            width: 80px;
        }

        .sidebar-collapsed .sidebar-header-text,
        .sidebar-collapsed .sidebar-text,
        .sidebar-collapsed .sidebar-footer {
            display: none;
        }

        .sidebar-collapsed .sidebar-item {
            justify-content: center;
        }

        .sidebar-collapsed .sidebar-item i {
            margin-right: 0 !important;
        }
        `;
        document.head.appendChild(sidebarStyle);
        

                document.addEventListener('DOMContentLoaded', function() {
            // Find the recharge button
            const rechargeButton = Array.from(document.querySelectorAll('button')).find(
                button => button.textContent.trim() === 'Recharger'
            );
            
            const rechargeModal = document.getElementById('recharge-modal');
            const closeModalButton = document.getElementById('close-recharge-modal');
            const rechargeForm = document.getElementById('recharge-form');

            // Input formatting
            const cardNumberInput = document.getElementById('card-number');
            const cardExpiryInput = document.getElementById('card-expiry');
            const cardCvvInput = document.getElementById('card-cvv');

            // Show modal function
            function showModal() {
                if (rechargeModal) {
                    rechargeModal.classList.remove('hidden');
                    rechargeModal.classList.add('flex');
                }
            }

            // Hide modal function
            function hideModal() {
                if (rechargeModal) {
                    rechargeModal.classList.add('hidden');
                    rechargeModal.classList.remove('flex');
                }
            }

            // Add click event to recharge button
            if (rechargeButton) {
                rechargeButton.addEventListener('click', showModal);
            }

            // Close modal button event
            if (closeModalButton) {
                closeModalButton.addEventListener('click', hideModal);
            }

            // Form submission
            if (rechargeForm) {
                rechargeForm.addEventListener('submit', function(e) {
                    e.preventDefault();
                    const amount = document.getElementById('recharge-amount').value;
                    
                    // Simulate recharge process
                    Swal.fire({
                        title: 'Rechargement en cours',
                        text: `Rechargement de ${amount} € en cours`,
                        icon: 'info',
                        confirmButtonColor: '#8b5cf6'
                    }).then(() => {
                        // Close modal after submission
                        hideModal();
                    });
                });
            }

            if (rechargeModal) {
                rechargeModal.addEventListener('click', function(e) {
                    if (e.target === rechargeModal) {
                        hideModal();
                    }
                });
            }

        });

        document.addEventListener('DOMContentLoaded', function() {
            // Trouver le formulaire de rechargement
            const rechargeForm = document.getElementById('recharge-form');
            
            // Gestionnaire d'événement pour la soumission du formulaire
            if (rechargeForm) {
                rechargeForm.addEventListener('submit', function(e) {
                    // Empêcher la soumission par défaut du formulaire
                    e.preventDefault();
                    
                    // Récupérer le montant saisi
                    const amount = document.getElementById('recharge-amount').value;
                    
                    // Afficher l'alerte de chargement
                    Swal.fire({
                        title: 'Rechargement en cours',
                        text: `Rechargement de ${amount} € en cours...`,
                        icon: 'info',
                        showConfirmButton: false,
                        allowOutsideClick: false,
                        didOpen: () => {
                            Swal.showLoading();
                        }
                    });
                    
                    // Soumettre le formulaire après un court délai pour montrer l'animation
                    setTimeout(() => {
                        rechargeForm.submit();
                    }, 1500);
                });
            }
            
            // Vérifier si l'URL contient le paramètre de succès (vérifier les deux formats possibles)
            const urlParams = new URLSearchParams(window.location.search);
            if (urlParams.get('message') === 'Rechargement de votre solde réussite' || 
                urlParams.has('Rechargement_de_votre_solde_réussite')) {
                Swal.fire({
                    title: 'Succès!',
                    text: 'Rechargement de votre solde réussi',
                    icon: 'success',
                    confirmButtonColor: '#8b5cf6'
                });
            }
            
            // Vérifier si l'URL contient un message d'échec
            if (urlParams.has('Rechargement_de_votre_solde_échouée')) {
                Swal.fire({
                    title: 'Échec',
                    text: 'Le rechargement de votre solde a échoué. Veuillez réessayer.',
                    icon: 'error',
                    confirmButtonColor: '#8b5cf6'
                });
            }
        });
    </script>
