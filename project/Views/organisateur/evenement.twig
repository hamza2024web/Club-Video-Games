    <script>
        // Document ready function
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize collapsible sidebar
            initSidebar();
            
            // Initialize the event modal
            initEventModal();
            
            // Initialize the timeline item functionality
            initTimelineItems();
            
            // Initialize tab buttons
            initTabButtons();
            
            // Initialize category chips
            initCategoryChips();
            
            // Validation du formulaire d'événement
            const eventForm = document.querySelector('form[action="/organisateur/addEvenement"]');
            
            if (eventForm) {
                eventForm.addEventListener('submit', function(e) {
                    e.preventDefault();
                    
                    // Get required fields
                    const eventName = this.querySelector('input[name="name"]').value;
                    const category = this.querySelector('select[name="category"]').value;
                    const eventDate = this.querySelector('input[name="event_date"]').value;
                    const eventTime = this.querySelector('input[name="event_time"]').value;
                    const location = this.querySelector('input[name="location"]').value;
                    const maxParticipants = this.querySelector('input[name="max_participants"]').value;
                    
                    // Simple validation
                    if (!eventName || !category || !eventDate || !eventTime || !location || !maxParticipants) {
                        Swal.fire({
                            title: 'Formulaire incomplet',
                            text: 'Veuillez remplir tous les champs obligatoires',
                            icon: 'error',
                            confirmButtonColor: '#8b5cf6'
                        });
                        return;
                    }
                    
                    // Check registration dates if provided
                    const registrationStart = this.querySelector('input[name="registration_start"]').value;
                    const registrationEnd = this.querySelector('input[name="registration_end"]').value;
                    
                    if (registrationStart && registrationEnd) {
                        if (new Date(registrationEnd) <= new Date(registrationStart)) {
                            Swal.fire({
                                title: 'Erreur de date',
                                text: 'La date de clôture des inscriptions doit être postérieure à la date d\'ouverture',
                                icon: 'error',
                                confirmButtonColor: '#8b5cf6'
                            });
                            return;
                        }
                    }
                    
                    // Vérification que le nombre maximum de participants est raisonnable
                    if (parseInt(maxParticipants) > 500) {
                        Swal.fire({
                            title: 'Nombre de participants trop élevé',
                            text: 'Le nombre de participants semble anormalement élevé',
                            icon: 'warning',
                            showCancelButton: true,
                            confirmButtonColor: '#8b5cf6',
                            cancelButtonColor: '#d33',
                            confirmButtonText: 'Continuer quand même',
                            cancelButtonText: 'Corriger'
                        }).then((result) => {
                            if (result.isConfirmed) {
                                submitForm();
                            }
                        });
                        return;
                    }
                    
                    // If everything is valid, show loading state and submit
                    submitForm();
                    
                    function submitForm() {
                        // Show loading state
                        Swal.fire({
                            title: 'Création en cours',
                            text: 'Veuillez patienter pendant que nous créons votre événement...',
                            allowOutsideClick: false,
                            showConfirmButton: false,
                            willOpen: () => {
                                Swal.showLoading();
                            }
                        });
                        
                        // Submit the form
                        eventForm.submit();
                    }
