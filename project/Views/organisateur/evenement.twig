    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap');
        
        body {
            font-family: 'Poppins', sans-serif;
        }
        
        .stat-card {
            transition: all 0.3s ease;
        }
        
        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        }
        
        .sidebar-item {
            position: relative;
            transition: all 0.2s ease;
        }
        
        .sidebar-item:hover {
            background-color: rgba(255, 255, 255, 0.1);
        }
        
        .sidebar-item.active {
            background-color: rgba(139, 92, 246, 0.9);
        }
        
        .sidebar-icon {
            transition: all 0.3s ease;
        }
        
        .sidebar-item:hover .sidebar-icon {
            transform: translateX(5px);
        }
        
        .form-input:focus {
            border-color: #8b5cf6;
            box-shadow: 0 0 0 3px rgba(139, 92, 246, 0.2);
        }
        
        .event-card {
            transition: all 0.3s ease;
            border-left: 4px solid transparent;
            cursor: pointer;
        }
        
        .event-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        }
        
        .event-card.status-upcoming {
            border-left-color: #3b82f6;
        }
        
        .event-card.status-active {
            border-left-color: #10b981;
        }
        
        .event-card.status-completed {
            border-left-color: #8b5cf6;
        }
        
        .event-card.status-canceled {
            border-left-color: #ef4444;
        }
        
        .tab-button {
            position: relative;
            transition: all 0.2s ease;
        }
        
        .tab-button.active::after {
            content: '';
            position: absolute;
            bottom: -2px;
            left: 0;
            right: 0;
            height: 2px;
            background: linear-gradient(to right, #8b5cf6, #6366f1);
        }
        
        /* Collapsible sidebar styles */
        .sidebar-collapsed {
            width: 5rem;
            transition: width 0.3s ease;
        }
        
        .sidebar-expanded {
            width: 16rem;
            transition: width 0.3s ease;
        }
        
        .sidebar-collapsed .sidebar-text {
            display: none;
        }
        
        .sidebar-collapsed .sidebar-header-text {
            display: none;
        }
        
        .sidebar-expanded .sidebar-text {
            display: inline;
        }
        
        .sidebar-collapsed .sidebar-footer {
            display: none;
        }
        
        .main-content-collapsed {
            margin-left: 5rem;
            transition: margin-left 0.3s ease;
        }
        
        .main-content-expanded {
            margin-left: 16rem;
            transition: margin-left 0.3s ease;
        }
        
        /* Improved scrollbar for sidebar */
        .sidebar-scroll {
            scrollbar-width: thin;
            scrollbar-color: rgba(255, 255, 255, 0.2) transparent;
        }
        
        .sidebar-scroll::-webkit-scrollbar {
            width: 4px;
        }
        
        .sidebar-scroll::-webkit-scrollbar-track {
            background: transparent;
        }
        
        .sidebar-scroll::-webkit-scrollbar-thumb {
            background-color: rgba(255, 255, 255, 0.2);
            border-radius: 20px;
        }
        
        /* Event card detail styles */
        .card-details {
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.3s ease;
        }
        
        .card-expanded .card-details {
            max-height: 500px;
        }
        
        .rotate-icon {
            transition: transform 0.3s ease;
        }
        
        .card-expanded .rotate-icon {
            transform: rotate(180deg);
        }
            /* Adjust sidebar widths for both states */
        .sidebar-collapsed {
            width: 4rem !important;
        }
        
        .sidebar-expanded {
            width: 15rem;
        }
        
        /* Hide text in collapsed state */
        .sidebar-collapsed .sidebar-text,
        .sidebar-collapsed .sidebar-header-text {
            display: none;
        }
        
        /* Hide footer in collapsed state */
        .sidebar-collapsed .sidebar-footer {
            display: none;
        }
        
        /* Center icons when collapsed */
        .sidebar-collapsed .sidebar-icon {
            margin-left: auto;
            margin-right: auto;
        }
        
        /* Adjust main content margin */
        .main-content-collapsed {
            margin-left: 4rem !important;
        }
        
        .main-content-expanded {
            margin-left: 15rem;
        }
        
        /* Improve scrollbar styling */
        .sidebar-scroll {
            scrollbar-width: thin;
            scrollbar-color: rgba(255, 255, 255, 0.1) transparent;
        }
        
        .sidebar-scroll::-webkit-scrollbar {
            width: 3px;
        }
        
        .sidebar-scroll::-webkit-scrollbar-track {
            background: transparent;
        }
        
        .sidebar-scroll::-webkit-scrollbar-thumb {
            background-color: rgba(255, 255, 255, 0.1);
            border-radius: 3px;
        }
        /* Custom scrollbar styles for the card details */
        .custom-scrollbar {
            scrollbar-width: thin;
            scrollbar-color: rgba(107, 114, 128, 0.3) transparent;
        }

        .custom-scrollbar::-webkit-scrollbar {
            width: 6px;
        }

        .custom-scrollbar::-webkit-scrollbar-track {
            background: transparent;
        }

        .custom-scrollbar::-webkit-scrollbar-thumb {
            background-color: rgba(107, 114, 128, 0.3);
            border-radius: 20px;
        }

        .custom-scrollbar::-webkit-scrollbar-thumb:hover {
            background-color: rgba(107, 114, 128, 0.5);
        }

        /* Updated card-details styling */
        .card-details {
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.5s ease;
        }

        .card-expanded .card-details {
            max-height: 650px; /* Allow enough height for banner + scrollable content */
        }
        
        /* Event timeline styles */
        .timeline {
            position: relative;
        }
        
        .timeline::before {
            content: '';
            position: absolute;
            top: 0;
            bottom: 0;
            left: 12px;
            width: 2px;
            background-color: #e5e7eb;
        }
        
        .timeline-item {
            position: relative;
            padding-left: 30px;
            margin-bottom: 15px;
        }
        
        .timeline-point {
            position: absolute;
            left: 0;
            top: 3px;
            width: 24px;
            height: 24px;
            border-radius: 50%;
            background-color: #fff;
            border: 2px solid #8b5cf6;
            z-index: 1;
        }
        
        .timeline-item.completed .timeline-point {
            background-color: #8b5cf6;
        }
        
        /* Event categories chips */
        .category-chip {
            transition: all 0.2s ease;
        }
        
        .category-chip:hover {
            transform: translateY(-2px);
        }
        
        .category-chip.active {
            background-color: #8b5cf6;
            color: white;
        }
    </style>
</head>
