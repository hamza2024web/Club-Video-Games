            align-items: center;
            justify-content: center;
            cursor: pointer;
            z-index: 20;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            transition: all 0.2s ease;
            opacity: 0;
        }
        
        .game-card:hover .wish-btn {
            opacity: 1;
        }
        
        .wish-btn:hover {
            transform: scale(1.1);
        }
        
        .wish-btn.active {
            background-color: #EC4899;
            color: white;
        }
    </style>
</head>
