<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Game Management - Video Game Club</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <script src="../../public/js/EditGame.js"></script>
    <style>
        .gradient-bg {
            background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
        }
        .hover-effect {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        .hover-effect:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        }
    </style>
</head>
<body class="bg-gray-100">
    <div class="flex min-h-screen">
        <!-- Sidebar -->
        <aside class="w-64 bg-gradient-to-b from-green-600 to-green-800 text-white min-h-screen p-6 flex flex-col">
            <div class="mb-8 text-center">
                <h1 class="text-2xl font-bold">Video Game Club</h1>
                <p class="text-sm text-green-200">Admin Dashboard</p>
            </div>

            <nav class="flex-grow">
                <ul class="space-y-2">
                    <li><a href="/dashboard" class="flex items-center p-2 hover:bg-green-700 rounded-lg transition"><i class="fas fa-tachometer-alt mr-3"></i>Dashboard</a></li>
                    <li><a href="/genre" class="flex items-center p-2 hover:bg-green-700 rounded-lg transition"><i class="fas fa-list mr-3"></i>Genre Management</a></li>
                    <li><a href="/Game" class="flex items-center p-2 bg-green-700 rounded-lg transition"><i class="fas fa-gamepad mr-3"></i>Game Management</a></li>
                    <li><a href="/users" class="flex items-center p-2 hover:bg-green-700 rounded-lg transition"><i class="fas fa-users mr-3"></i>User Management</a></li>
                    <li><a href="/statistics" class="flex items-center p-2 hover:bg-green-700 rounded-lg transition"><i class="fas fa-chart-line mr-3"></i>Club Statistics</a></li>
                    <li><a href="/settings" class="flex items-center p-2 hover:bg-green-700 rounded-lg transition"><i class="fas fa-cog mr-3"></i>Settings</a></li>
                </ul>
            </nav>

            <div class="mt-auto pt-4">
                <a href="/logout">
                    <button class="w-full bg-red-500 hover:bg-red-600 text-white py-2 rounded-lg transition flex items-center justify-center">
                        <i class="fas fa-sign-out-alt mr-2"></i>
                        Logout
                    </button>
                </a>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="flex-1 p-10 bg-gray-100">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                <!-- Add Game Section -->
                <div class="md:col-span-1 bg-white rounded-lg shadow-lg p-6">
                    <h2 id="formTitle" class="text-2xl font-bold mb-6 text-gray-800">Add New Game</h2>
                    <form id="addGameForm" class="space-y-4" action="/addGame" method="post" enctype="multipart/form-data">
                        <input type="hidden" id="gameId" name="id" value="{{game.id}}">
                        <div>
                            <label class="block mb-2 text-gray-700">Game Title</label>
                            <input type="text" id="gameTitle" name="title" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500" placeholder="Enter game title" required>
                        </div>

                        <div>
                            <label class="block mb-2 text-gray-700">Genre</label>
                            <select id="gameGenre" name="genreId[]" multiple class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500">
                                {% for genre in genres %}
                                    <option value="{{ genre.id }}">{{ genre.name }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div>
                            <label for="gamePlatform" class="block mb-2 text-gray-700">Plateforme</label>
                            <select id="gamePlatform" name="platform" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500">
                                <option value="pc">PC</option>
                                <option value="ps5">PlayStation 5</option>
                                <option value="ps4">PlayStation 4</option>
                                <option value="xbox_series_x">Xbox Series X</option>
                                <option value="xbox_one">Xbox One</option>
                                <option value="switch">Nintendo Switch</option>
                                <option value="steam">Steam</option>
                                <option value="epic_games">Epic Games Store</option>
                                <option value="stadia">Google Stadia</option>
                                <option value="mobile">Mobile (iOS & Android)</option>
                            </select>
                        </div>

                        <div>
                            <label class="block mb-2 text-gray-700">Developer</label>
                            <input type="text" id="gameDeveloper" name="developer" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500" placeholder="Game developer">
                        </div>

                        <div>
                            <label class="block mb-2 text-gray-700">Release Year</label>
                            <input type="date" id="gameYear" name="releaseYear" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500" placeholder="YYYY">
                        </div>

                        <div>
                            <label class="block mb-2 text-gray-700">Description</label>
                            <textarea id="gameDescription" name="description" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500" placeholder="Brief description of the game" rows="4"></textarea>
                        </div>

                        <div>
                            <label class="block mb-2 text-gray-700">Game Cover Image</label>
                            <input type="file" id="gameCover" name="coverImage" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500" accept="image/*">
                        </div>

                        <div>
                            <label class="block mb-2 text-gray-700">Prix</label>
                            <input type="number" id="prix" name="prix" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500" accept="image/*">
                        </div>

                        <div>
                            <label class="block mb-2 text-gray-700">Status</label>
                            <select id="gameStatus" name="status" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500">
                                <option value="Available">Available</option>
                                <option value="Unavailable">Unavailable</option>
                            </select>
                        </div>

                        <button type="submit" id="addGame" class="w-full bg-gradient-to-r from-purple-600 to-indigo-700 text-white py-3 rounded-lg hover:from-purple-700 hover:to-indigo-800 transition">Add Game
                        </button>
                    </form>
                </div>

                <!-- Game List Section -->
                <div class="md:col-span-2 bg-white rounded-lg shadow-lg p-6">
                    <div class="flex justify-between items-center mb-6">
                        <h2 class="text-2xl font-bold text-gray-800">Game Library</h2>
                        <div class="relative">
                            <input type="text" placeholder="Search games..." class="px-4 py-2 border rounded-lg pl-10 focus:outline-none focus:ring-2 focus:ring-purple-500">
                            <i class="fas fa-search absolute left-3 top-3 text-gray-400"></i>
                        </div>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 gap-4">
                        <!-- Game Card Template -->
                        {% for game in games %}
                            <div class="bg-white border border-gray-200 rounded-lg shadow-md hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2 overflow-hidden">
                                <div class="flex h-full">
                                    <div class="w-1/3">
                                        <img src="{{ game.image|default('/images/default-game-cover.jpg') }}" alt="{{ game.nom_de_jeu }}" class="w-full h-full object-cover">
                                    </div>
                                    <div class="w-2/3 p-5">
                                        <div class="flex justify-between items-center mb-4">
                                            <span id="gameStatus-{{ game.id }}" class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium 
                                                {% if game.status == 'Available' %}bg-green-100 text-green-800
                                                {% else %}bg-red-100 text-red-800
                                                {% endif %}">
                                                {{ game.status|default('Available') }}
                                            </span>
                                            <div class="flex space-x-2">
                                                <button class="text-yellow-500 hover:text-yellow-600 transition hover:scale-110" 
                                                        data-tooltip="Edit Game" 
                                                        onclick="editGame('{{ game.id }}')">
                                                    <i class="fas fa-edit"></i>
                                                </button>
                                                <form action="/deleteGame" method="post" onsubmit="return confirm('Are you sure you want to delete this game?');">
                                                    <input type="hidden" value="{{ game.id }}" name="id">
                                                    <button type="submit" class="text-red-500 hover:text-red-600 transition hover:scale-110" 
                                                            data-tooltip="Delete Game">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </div>

                                        <h3 id="gameTitle-{{ game.id }}" class="text-xl font-bold text-gray-800 mb-2">{{ game.nom_de_jeu }}</h3>
                                        
                                        <!-- Price Information -->
                                        <div class="flex items-center mb-3">
                                            <span class="inline-flex items-center px-3 py-1 rounded-md bg-indigo-100 text-indigo-800 font-medium">
                                                <i class="fas fa-euro-sign mr-1"></i>
                                                <span id="gamePrice-{{ game.id }}">{{ game.prix|default('0.00') }}</span>
                                            </span>
                                            
                                            <!-- Quick Price Update -->
                                            <button class="ml-2 text-indigo-500 hover:text-indigo-600 transition hover:scale-110" 
                                                    data-tooltip="Update Price" 
                                                    onclick="quickUpdatePrice('{{ game.id }}', '{{ game.prix|default('0.00') }}')">
                                                <i class="fas fa-pencil-alt"></i>
                                            </button>
                                        </div>
                                        
                                        <!-- Game Info -->
                                        <div class="flex items-center text-sm text-gray-600 mb-2">
                                            <span class="mr-3">
                                                <i class="fas fa-tag mr-1"></i>
                                                <span id="gameGenre-{{ game.id }}">{{ game.genre }}</span>
                                            </span>
                                            <span>
                                                <i class="fas fa-calendar mr-1"></i>
                                                <span id="gameYear-{{ game.id }}">{{ game.date_de_sortie }}</span>
                                            </span>
                                        </div>
                                        
                                        <!-- Platform and Developer -->
                                        <div class="flex flex-wrap items-center text-sm text-gray-500 mb-2">
                                            <span class="mr-3">
                                                <i class="fas fa-code-branch mr-1"></i>
                                                <span id="gameDeveloper-{{ game.id }}">{{ game.developpeur }}</span>
                                            </span>
                                            {% if game.platform %}
                                            <span>
                                                <i class="fas fa-gamepad mr-1"></i>
                                                <span id="gamePlatform-{{ game.id }}">{{ game.platform }}</span>
                                            </span>
                                            {% endif %}
                                        </div>
                                        
                                        <!-- Description -->
                                        <p id="gameDescription-{{ game.id }}" class="text-gray-600 text-sm line-clamp-3 mb-3">
                                            {{ game.description|slice(0, 100) }}{% if game.description|length > 100 %}...{% endif %}
                                        </p>
                                        
                                        <!-- Additional Admin Controls -->
                                        <div class="flex items-center justify-between mt-2 pt-2 border-t border-gray-200">
                                            <div class="flex items-center">
                                                <span class="text-sm text-gray-500">
                                                    <i class="fas fa-gamepad mr-1"></i>Stock: 
                                                    <span id="gameStock-{{ game.id }}" class="font-medium">{{ game.stock|default(0) }}</span>
                                                </span>
                                            </div>
                                            <div>
                                                <button class="px-2 py-1 text-xs bg-green-500 text-white rounded hover:bg-green-600 transition-colors" 
                                                        onclick="incrementStock('{{ game.id }}')">
                                                    <i class="fas fa-plus mr-1"></i>Stock
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>

                    <!-- Pagination -->
                    <div class="mt-6 flex justify-center">
                        <nav class="flex items-center space-x-2">
                            <a href="#" class="px-3 py-1 rounded border text-gray-600 hover:bg-gray-100">
                                <i class="fas fa-chevron-left"></i>
                            </a>
                            <a href="#" class="px-3 py-1 rounded border bg-purple-600 text-white">1</a>
                            <a href="#" class="px-3 py-1 rounded border text-gray-600 hover:bg-gray-100">2</a>
                            <a href="#" class="px-3 py-1 rounded border text-gray-600 hover:bg-gray-100">3</a>
                            <a href="#" class="px-3 py-1 rounded border text-gray-600 hover:bg-gray-100">
                                <i class="fas fa-chevron-right"></i>
                            </a>
                        </nav>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const urlParams = new URLSearchParams(window.location.search);
            if (urlParams.has('game_Inserted_successfully')) {
                Swal.fire({
                    title: "Success!",
                    text: "game_Inserted_successfully!",
                    icon: "success",
                    confirmButtonText: "OK",
                    timer: 3000 
                }).then(()=> {
                    window.location.href = "/Game";
                });

            }
        });
        
        document.addEventListener("DOMContentLoaded", function() {
            const urlParams = new URLSearchParams(window.location.search);
            if (urlParams.has('game_Updated_successfully')) {
                Swal.fire({
                    title: "Success!",
                    text: "game_Updated_successfully!",
                    icon: "success",
                    confirmButtonText: "OK",
                    timer: 3000 
                }).then(()=> {
                    window.location.href = "/Game";
                });

            }
        });
        
        function quickUpdatePrice(gameId, currentPrice) {
            Swal.fire({
                title: 'Update Price',
                input: 'number',
                inputLabel: 'New Price (€)',
                inputValue: currentPrice,
                inputAttributes: {
                    step: '0.01',
                    min: '0'
                },
                showCancelButton: true,
                confirmButtonText: 'Update',
                confirmButtonColor: '#4f46e5',
                preConfirm: (price) => {
                    if (!price || price < 0) {
                        Swal.showValidationMessage('Please enter a valid price');
                    }
                    return price;
                }
            }).then((result) => {
                if (result.isConfirmed) {
                    // Send AJAX request to update price
                    fetch('/updateGamePrice', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({
                            id: gameId,
                            price: result.value
                        })
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            document.getElementById(`gamePrice-${gameId}`).textContent = result.value;
                            Swal.fire('Updated!', 'Price has been updated.', 'success');
                        } else {
                            Swal.fire('Error!', 'Failed to update price.', 'error');
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        Swal.fire('Error!', 'Something went wrong.', 'error');
                    });
                }
            });
        }
        
        function incrementStock(gameId) {
            const currentStock = parseInt(document.getElementById(`gameStock-${gameId}`).textContent) || 0;
            
            Swal.fire({
                title: 'Update Stock',
                input: 'number',
                inputLabel: 'Add to current stock',
                inputValue: 1,
                inputAttributes: {
                    min: '1',
                    step: '1'
                },
                showCancelButton: true,
                confirmButtonText: 'Update',
                confirmButtonColor: '#22c55e',
                preConfirm: (quantity) => {
                    if (!quantity || quantity < 1) {
                        Swal.showValidationMessage('Please enter a valid quantity');
                    }
                    return quantity;
                }
            }).then((result) => {
                if (result.isConfirmed) {
                    // Send AJAX request to update stock
                    fetch('/updateGameStock', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({
                            id: gameId,
                            stock: currentStock + parseInt(result.value)
                        })
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            const newStock = currentStock + parseInt(result.value);
                            document.getElementById(`gameStock-${gameId}`).textContent = newStock;
                            Swal.fire('Updated!', `Stock increased to ${newStock}`, 'success');
                        } else {
                            Swal.fire('Error!', 'Failed to update stock.', 'error');
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        Swal.fire('Error!', 'Something went wrong.', 'error');
                    });
                }
            });
        }
    </script>
</body>
</html>