<body class="bg-gray-100">
    <div class="flex min-h-screen">
        <!-- Sidebar -->
        <aside class="w-64 bg-gradient-to-br from-indigo-900 via-purple-800 to-indigo-900 text-white min-h-screen p-6 relative">
            <div class="mb-8 text-center">
                <div class="flex justify-center mb-3">
                    <i class="fas fa-gamepad text-4xl text-purple-300"></i>
                </div>
                <h1 class="text-2xl font-bold">GamersHub</h1>
                <p class="text-sm text-purple-200">Member Portal</p>
            </div>

            <nav class="flex-grow">
                <ul class="space-y-1">
                    <li><a href="/member/dashboard" class="sidebar-item flex items-center p-3 hover:bg-indigo-700 rounded-lg transition"><i class="fas fa-home mr-3 text-purple-300"></i>Dashboard</a></li>
                    <li><a href="/member/tournaments" class="sidebar-item flex items-center p-3 hover:bg-indigo-700 rounded-lg transition"><i class="fas fa-trophy mr-3 text-purple-300"></i>Tournaments</a></li>
                    <li><a href="/member/events" class="sidebar-item flex items-center p-3 bg-indigo-700 rounded-lg transition"><i class="fas fa-calendar-alt mr-3 text-purple-300"></i>Events</a></li>
                    <li><a href="/member/boutique" class="sidebar-item flex items-center p-3 hover:bg-indigo-700 rounded-lg transition"><i class="fas fa-store mr-3 w-5 sidebar-icon text-purple-300"></i>Boutique</a></li>
                    <li><a href="/member/games" class="sidebar-item flex items-center p-3 hover:bg-indigo-700 rounded-lg transition"><i class="fas fa-gamepad mr-3 text-purple-300"></i>My Games</a></li>
                    <li><a href="/member/messages" class="sidebar-item flex items-center p-3 hover:bg-indigo-700 rounded-lg transition">
                        <i class="fas fa-envelope mr-3 text-purple-300"></i>Messages
                        <span class="ml-auto bg-red-500 text-white text-xs font-bold px-2 py-1 rounded-full">3</span>
                    </a></li>
                    <li><a href="/member/rewards" class="sidebar-item flex items-center p-3 hover:bg-indigo-700 rounded-lg transition"><i class="fas fa-gift mr-3 text-purple-300"></i>Rewards</a></li>
                    <li><a href="/member/profile" class="sidebar-item flex items-center p-3 hover:bg-indigo-700 rounded-lg transition"><i class="fas fa-user mr-3 text-purple-300"></i>Profile</a></li>
                </ul>
            </nav>

            <div class="absolute bottom-0 left-0 right-0 p-4">
                <div class="flex items-center space-x-2 mb-3 p-2 rounded-lg bg-indigo-800/50">
                    <img src="/{{member.profile_photo}}" class="rounded-full border-2 border-purple-300 h-20 w-20" alt="Member Profile">
                    <div>
                        <p class="text-sm font-medium">{{member.name}}</p>
                        <div class="flex items-center">
                            <i class="fas fa-circle text-green-500 mr-1 text-xs"></i>
                            <p class="text-xs text-purple-300">Online</p>
                        </div>
                        <p class="text-xs text-purple-300 mt-1">Solde: {{my_solde}} €</p>
                    </div>
                </div>
                <!-- Mini Account Balance -->
                <div class="p-3 border-t border-indigo-800 sidebar-footer">
                    <div class="bg-indigo-800 rounded-lg p-2 text-center">
                        <div class="text-xs">Solde: <span class="font-bold">{{my_solde}} €</span></div>
                        <button class="mt-1 text-xs px-2 py-0.5 bg-purple-500 hover:bg-purple-600 rounded-full transition duration-200">
                            Recharger
                        </button>
                    </div>
                </div>
                <a href="/logout">
                    <button class="w-full bg-pink-600 hover:bg-pink-700 text-white py-2 rounded-lg transition flex items-center justify-center">
                        <i class="fas fa-sign-out-alt mr-2"></i>
                        Logout
                    </button>
                </a>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="flex-1 p-8">
            <!-- Header -->
            <header class="flex justify-between items-center mb-8">
                <div>
                    <h1 class="text-2xl font-bold text-gray-800">Community Events</h1>
                    <p class="text-gray-500">Discover and participate in exciting gaming events!</p>
                </div>
                <div class="flex items-center space-x-4">
                    <div class="relative">
                        <input type="text" placeholder="Search events, workshops..." class="pl-10 pr-4 py-2 rounded-full border border-gray-300 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent w-64 bg-gray-50">
                        <i class="fas fa-search absolute left-3 top-3 text-gray-400"></i>
                    </div>
                    <div class="relative">
                        <button class="text-gray-600 hover:text-gray-800 transition">
                            <i class="fas fa-bell text-xl"></i>
                            <span class="absolute -top-1 -right-1 bg-red-500 text-white rounded-full w-4 h-4 flex items-center justify-center text-xs">5</span>
                        </button>
                    </div>
                </div>
            </header>
            
            <!-- Event Category Filters -->
            <section class="mb-8">
                <div class="flex justify-between items-center mb-4">
                    <h2 class="text-lg font-semibold text-gray-700">Filter by Category</h2>
                    <div class="flex space-x-2">
                        <button class="text-sm px-4 py-2 text-indigo-600 hover:text-indigo-800 transition">
                            <i class="fas fa-redo-alt mr-1"></i> Reset Filters
                        </button>
                    </div>
                </div>
                
                <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                    <button class="bg-white p-4 rounded-xl shadow-sm border-l-4 border-purple-500 hover:shadow-md transition flex items-center justify-between">
                        <div class="flex items-center">
                            <div class="bg-purple-100 p-2 rounded-lg mr-3">
                                <i class="fas fa-gamepad text-purple-600"></i>
                            </div>
                            <span class="font-medium text-gray-800">Gaming</span>
                        </div>
                        <span class="text-xs bg-purple-100 text-purple-800 px-2 py-1 rounded-full">12</span>
                    </button>
                    
                    <button class="bg-white p-4 rounded-xl shadow-sm border-l-4 border-red-500 hover:shadow-md transition flex items-center justify-between">
                        <div class="flex items-center">
                            <div class="bg-red-100 p-2 rounded-lg mr-3">
                                <i class="fas fa-trophy text-red-600"></i>
                            </div>
                            <span class="font-medium text-gray-800">Competitions</span>
                        </div>
                        <span class="text-xs bg-red-100 text-red-800 px-2 py-1 rounded-full">8</span>
                    </button>
                    
                    <button class="bg-white p-4 rounded-xl shadow-sm border-l-4 border-green-500 hover:shadow-md transition flex items-center justify-between">
                        <div class="flex items-center">
                            <div class="bg-green-100 p-2 rounded-lg mr-3">
                                <i class="fas fa-chalkboard-teacher text-green-600"></i>
                            </div>
                            <span class="font-medium text-gray-800">Workshops</span>
                        </div>
                        <span class="text-xs bg-green-100 text-green-800 px-2 py-1 rounded-full">5</span>
                    </button>
                    
                    <button class="bg-white p-4 rounded-xl shadow-sm border-l-4 border-blue-500 hover:shadow-md transition flex items-center justify-between">
                        <div class="flex items-center">
                            <div class="bg-blue-100 p-2 rounded-lg mr-3">
                                <i class="fas fa-glass-cheers text-blue-600"></i>
                            </div>
                            <span class="font-medium text-gray-800">Social</span>
                        </div>
                        <span class="text-xs bg-blue-100 text-blue-800 px-2 py-1 rounded-full">7</span>
                    </button>
                </div>
            </section>
            
            <!-- Stats Overview -->
            <section class="mb-10">
                <h2 class="text-xl font-bold text-gray-800 mb-6">Your Event Statistics</h2>
                <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
                    <div class="stat-card bg-white p-6 rounded-xl shadow-sm border-l-4 border-purple-500">
                        <div class="flex justify-between items-center">
                            <div>
                                <h3 class="text-gray-500 text-sm font-medium">Events Attended</h3>
                                <p class="text-3xl font-bold text-gray-800">14</p>
                                <p class="text-xs text-green-500 mt-1">↑ 3 this month</p>
                            </div>
                            <div class="bg-purple-100 p-3 rounded-lg">
                                <i class="fas fa-calendar-check text-purple-600 text-2xl"></i>
                            </div>
                        </div>
                    </div>
                    <div class="stat-card bg-white p-6 rounded-xl shadow-sm border-l-4 border-green-500">
                        <div class="flex justify-between items-center">
                            <div>
                                <h3 class="text-gray-500 text-sm font-medium">Upcoming RSVPs</h3>
                                <p class="text-3xl font-bold text-gray-800">5</p>
                                <p class="text-xs text-green-500 mt-1">↑ 2 new confirmations</p>
                            </div>
                            <div class="bg-green-100 p-3 rounded-lg">
                                <i class="fas fa-calendar-alt text-green-600 text-2xl"></i>
                            </div>
                        </div>
                    </div>
                    <div class="stat-card bg-white p-6 rounded-xl shadow-sm border-l-4 border-blue-500">
                        <div class="flex justify-between items-center">
                            <div>
                                <h3 class="text-gray-500 text-sm font-medium">Achievements</h3>
                                <p class="text-3xl font-bold text-gray-800">8</p>
                                <p class="text-xs text-green-500 mt-1">↑ 1 new this month</p>
                            </div>
                            <div class="bg-blue-100 p-3 rounded-lg">
                                <i class="fas fa-medal text-blue-600 text-2xl"></i>
                            </div>
                        </div>
                    </div>
                    <div class="stat-card bg-white p-6 rounded-xl shadow-sm border-l-4 border-yellow-500">
                        <div class="flex justify-between items-center">
                            <div>
                                <h3 class="text-gray-500 text-sm font-medium">Event Points</h3>
                                <p class="text-3xl font-bold text-gray-800">530</p>
                                <p class="text-xs text-green-500 mt-1">↑ 85 this month</p>
                            </div>
                            <div class="bg-yellow-100 p-3 rounded-lg">
                                <i class="fas fa-star text-yellow-600 text-2xl"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            
            <!-- All Events -->
            <section id="all-events" class="mb-10">
                <div class="flex justify-between items-center mb-6">
                    <h2 class="text-xl font-bold text-gray-800">Upcoming Events</h2>
                    <div class="flex items-center">
                        <span class="text-sm text-gray-500 mr-3">Sort by:</span>
                        <select class="bg-white border border-gray-300 rounded-lg px-3 py-1.5 text-sm focus:outline-none focus:ring-2 focus:ring-purple-500">
                            <option>Date (Nearest)</option>
                            <option>Popularity</option>
                            <option>Price: Low to High</option>
                            <option>Price: High to Low</option>
                        </select>
                    </div>
                </div>
                
                {% if events|length == 0 %}
                    <div class="flex flex-col items-center justify-center py-16 text-center">
                        <div class="w-32 h-32 bg-purple-100 rounded-full flex items-center justify-center mb-4 float-animation">
                            <i class="fas fa-gamepad text-5xl text-purple-400"></i>
                        </div>
