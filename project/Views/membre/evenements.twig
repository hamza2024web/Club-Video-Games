            </section>
        </main>
    </div>
    
    <!-- Quick Action Button -->
    <button class="fixed bottom-6 right-6 p-4 bg-gradient-to-r from-purple-600 to-indigo-600 text-white rounded-full shadow-lg hover:from-purple-700 hover:to-indigo-700 transition z-50">
        <i class="fas fa-plus"></i>
    </button>
    
    <script>
        // You can add JavaScript for interactive features here
        document.addEventListener('DOMContentLoaded', function() {
            // Example: Toggle mobile navigation
            const mobileMenuButton = document.querySelector('.mobile-menu-button');
            const sidebar = document.querySelector('aside');
            
            if (mobileMenuButton) {
                mobileMenuButton.addEventListener('click', function() {
                    sidebar.classList.toggle('hidden');
                });
            }
        });

        // Function to toggle programme visibility
         function toggleProgramme(button) {
            const programmeSection = button.parentNode.nextElementSibling;
            const chevron = button.querySelector('.programme-chevron');
            
            if (programmeSection.classList.contains('hidden')) {
                programmeSection.classList.remove('hidden');
                chevron.style.transform = 'rotate(180deg)';
            } else {
                programmeSection.classList.add('hidden');
                chevron.style.transform = 'rotate(0deg)';
            }
        }
    </script>
