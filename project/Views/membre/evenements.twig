                                                    {% elseif event.statut == 'Pending' %}status-pending
                                                    {% elseif event.statut == 'Full' %}status-full
                                                    {% elseif event.statut == 'In Progress' %}status-in-progress
                                                    {% elseif event.statut == 'Completed' %}status-completed
                                                    {% elseif event.statut == 'Cancelled' %}status-cancelled
