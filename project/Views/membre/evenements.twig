                                                    {% elseif event.statut == 'Full' %}Complet
                                                    {% elseif event.statut == 'In Progress' %}En cours
                                                    {% elseif event.statut == 'Completed' %}Terminé
                                                    {% elseif event.statut == 'Cancelled' %}Annulé
                                                    {% else %}{{ event.statut }}{% endif %}
                                                </div>
                                            </div>
                                            
                                            <!-- Event Information -->
                                            <div class="p-5">
                                                <div class="flex justify-between items-start mb-3">
                                                    <h3 class="text-lg font-bold text-gray-800">{{event.name}}</h3>
                                                    <div class="flex items-center">
                                                        {% if event.entry_fee > 0 %}
                                                        <span class="event-fee-badge">
                                                            <i class="fas fa-coins mr-1"></i> {{event.entry_fee}} €
                                                        </span>
                                                        {% else %}
                                                        <span class="event-free-badge">
                                                            <i class="fas fa-ticket-alt mr-1"></i> Gratuit
                                                        </span>
                                                        {% endif %}
                                                    </div>
                                                </div>
                                                
                                                <p class="text-sm text-gray-600 mb-4 line-clamp-2">{{event.description}}</p>
                                                
                                                <!-- Event Stats -->
                                                <div class="info-row">
                                                    <div class="info-item">
                                                        <i class="fas fa-clock"></i>
                                                        <span>{{event.event_time}}</span>
                                                    </div>
                                                    <div class="info-item">
                                                        <i class="fas fa-map-marker-alt"></i>
                                                        <span>{{event.location|default('À confirmer')}}</span>
                                                    </div>
                                                </div>
                                                
                                                <div class="info-row">
                                                    <div class="info-item">
                                                        <i class="fas fa-users"></i>
                                                        <span>{{event.nombre_participants|default(0)}}/{{event.numbre_membre}}</span>
                                                    </div>
                                                    <div class="info-item">
                                                        <i class="fas fa-gamepad"></i>
                                                        <span>{{event.type_evenement}}</span>
                                                    </div>
                                                </div>
                                                
                                                <!-- Attendance Progress Bar -->
                                                <div class="mt-3">
                                                    <div class="attendance-indicator">
                                                        <div class="attendance-bar" style="width: {{ (event.nombre_participants / event.numbre_membre * 100)|round }}%"></div>
                                                    </div>
                                                    <div class="flex justify-between text-xs text-gray-500 mt-1">
                                                        <span>Attendance</span>
                                                        <span>{{event.nombre_participants|default(0)}}/{{event.numbre_membre}}</span>
                                                    </div>
                                                </div>
                                                
                                                <!-- Toggle button for Programme -->
                                                <div class="mt-4 mb-2">
                                                    <button onclick="toggleProgramme(this)" class="w-full text-left text-sm text-purple-600 hover:text-purple-800 transition flex items-center justify-between px-2 py-1 rounded hover:bg-purple-50">
                                                        <span><i class="fas fa-calendar-day mr-2"></i> Voir le programme</span>
                                                        <i class="fas fa-chevron-down programme-chevron"></i>
                                                    </button>
                                                </div>
                                                
                                                <!-- Programme Section (Hidden by default) -->
                                                <div class="programme-section hidden mt-3 border-t border-gray-200 pt-3">
                                                    <!-- Timeline with styling -->
                                                    <div class="relative pl-8 before:content-[''] before:absolute before:left-3 before:top-0 before:bottom-0 before:w-0.5 before:bg-gradient-to-b before:from-purple-300 before:to-purple-100 max-h-40 overflow-y-auto custom-scrollbar pr-1">
                                                        {% if event.programme and event.programme|length > 0 %}
                                                            {% for item in event.programme %}
                                                                <div class="mb-3 relative">
                                                                    <!-- Timeline Point with effect -->
                                                                    <div class="absolute left-[-20px] top-1.5 w-5 h-5 bg-white rounded-full border-2 border-purple-400 z-10 flex items-center justify-center">
                                                                        <div class="w-2 h-2 bg-purple-500 rounded-full"></div>
                                                                    </div>
                                                                    
                                                                    <!-- Content -->
                                                                    <div class="bg-purple-50 p-2 rounded-lg shadow-sm border border-purple-100">
                                                                        <!-- Time Badge -->
                                                                        <div class="inline-block bg-purple-100 text-purple-800 text-xs px-2 py-0.5 rounded-full mb-1">
                                                                            <i class="far fa-clock mr-1"></i>
                                                                            {{ item.timeline_time }}
                                                                        </div>
                                                                        
                                                                        <!-- Event Title -->
                                                                        <h5 class="text-purple-900 font-bold text-sm">{{ item.timeline_title }}</h5>
                                                                        
                                                                        <!-- Event Description (limited height) -->
                                                                        <p class="text-gray-600 text-xs leading-relaxed line-clamp-2">{{ item.timeline_desc }}</p>
                                                                    </div>
                                                                </div>
                                                            {% endfor %}
                                                        {% else %}
                                                            <!-- Empty state -->
                                                            <div class="text-center py-3 px-3 bg-purple-50 rounded-lg border border-purple-100">
                                                                <i class="fas fa-calendar-times text-purple-300 text-lg mb-1"></i>
                                                                <p class="text-purple-600 text-xs">Programme non disponible</p>
                                                            </div>
                                                        {% endif %}
                                                    </div>
                                                </div>
                                                
                                                <!-- Action Button -->
                                                {% if event.statut == 'Open' or event.statut == 'Pending' %}
                                                    <button class="w-full mt-4 px-4 py-2 bg-purple-600 hover:bg-purple-700 text-white rounded-lg transition flex items-center justify-center event-action-btn">
                                                        <i class="fas fa-calendar-check mr-2"></i> S'inscrire
                                                    </button>
                                                {% elseif event.statut == 'Full' %}
                                                    <button class="w-full mt-4 px-4 py-2 bg-amber-500 hover:bg-amber-600 text-white rounded-lg transition flex items-center justify-center event-action-btn" disabled>
                                                        <i class="fas fa-user-times mr-2"></i> Complet
                                                    </button>
                                                {% elseif event.statut == 'In Progress' %}
                                                    <div class="w-full mt-4 px-4 py-2 bg-green-600 text-white rounded-lg flex items-center justify-center">
                                                        <i class="fas fa-play mr-2"></i> En cours
                                                    </div>
                                                {% elseif event.statut == 'Completed' %}
                                                    <button class="w-full mt-4 px-4 py-2 bg-gray-600 hover:bg-gray-700 text-white rounded-lg transition flex items-center justify-center event-action-btn">
                                                        <i class="fas fa-photo-video mr-2"></i> Voir les photos
                                                    </button>
                                                {% elseif event.statut == 'Cancelled' %}
                                                    <div class="w-full mt-4 px-4 py-2 bg-red-500 text-white rounded-lg flex items-center justify-center">
                                                        <i class="fas fa-ban mr-2"></i> Annulé
                                                    </div>
                                                {% endif %}
                                            </div>
                                        </div>
                                    {% endfor %}
                                {% endif %}
                            </div>
                    </div>
                </div>
                
                <div class="flex justify-center mt-8">
                    <button class="px-6 py-3 bg-white border border-gray-300 rounded-lg text-purple-600 hover:bg-gray-50 transition flex items-center font-medium">
                        Load More Events <i class="fas fa-chevron-down ml-2"></i>
                    </button>
                </div>
            </section>
            
            <!-- Create Your Own Event Section -->
            <section class="mb-10">
                <div class="bg-gradient-to-r from-purple-600 to-indigo-600 rounded-xl overflow-hidden shadow-lg">
                    <div class="p-8 flex flex-col md:flex-row items-center">
                        <div class="md:w-2/3 mb-6 md:mb-0 md:pr-6">
                            <h2 class="text-2xl font-bold text-white mb-3">Create Your Own Community Event</h2>
                            <p class="text-purple-100 mb-6">Have an idea for a gaming event? Propose it to our community and become an event organizer. Get support, resources, and gain valuable event hosting experience!</p>
                            <div class="flex flex-wrap gap-4">
                                <button class="px-6 py-2.5 bg-white text-purple-700 font-medium rounded-lg hover:bg-gray-100 transition shadow-md event-action-btn">
                                    Create Event Proposal
                                </button>
                                <button class="px-6 py-2.5 bg-purple-800 bg-opacity-50 text-white font-medium rounded-lg hover:bg-opacity-70 transition shadow-md event-action-btn border border-purple-300 border-opacity-50">
                                    See Organizer Guidelines
                                </button>
                            </div>
                        </div>
                        <div class="md:w-1/3 flex justify-center">
                            <div class="w-48 h-48 bg-purple-800 bg-opacity-50 rounded-full flex items-center justify-center">
                                <i class="fas fa-calendar-plus text-white text-6xl"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            
            <!-- Past Events -->
            <section class="mb-10">
                <div class="flex justify-between items-center mb-6">
                    <h2 class="text-xl font-bold text-gray-800">Past Events</h2>
                    <a href="/member/events/past" class="text-sm text-purple-600 hover:text-purple-800 transition">
                        View All Past Events
                    </a>
                </div>
                
                <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                    <!-- Past Event Card 1 -->
                    <div class="event-card shadow-sm opacity-80 hover:opacity-100 transition">
                        <div class="relative">
                            <img src="/api/placeholder/400/250" alt="Call of Duty Tournament" class="w-full h-48 object-cover filter grayscale-[30%]">
                            
                            <div class="date-badge">
                                <i class="fas fa-calendar-alt mr-1"></i> March 15, 2025
                            </div>
                            
                            <div class="category-badge category-competition">
                                Competition
                            </div>
                            
                            <div class="status-badge status-ended">
                                Ended
                            </div>
                        </div>
                        
                        <div class="p-5">
                            <div class="flex justify-between items-start mb-3">
                                <h3 class="text-lg font-bold text-gray-800">Call of Duty Tournament</h3>
                                <div class="flex items-center">
                                    <span class="text-xs bg-gray-200 text-gray-700 px-2 py-1 rounded-full flex items-center">
                                        <i class="fas fa-check-circle mr-1"></i> Attended
                                    </span>
                                </div>
                            </div>
                            
                            <p class="text-sm text-gray-600 mb-4">Team-based tournament with 16 teams competing for the championship title and prizes.</p>
                            
                            <div class="mt-4 flex justify-between">
                                <button class="px-4 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition flex items-center text-sm">
                                    <i class="fas fa-photo-video mr-2"></i> View Gallery
                                </button>
                                <button class="px-4 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition flex items-center text-sm">
                                    <i class="fas fa-trophy mr-2"></i> Results
                                </button>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Past Event Card 2 -->
                    <div class="event-card shadow-sm opacity-80 hover:opacity-100 transition">
                        <div class="relative">
                            <img src="/api/placeholder/400/250" alt="Gaming Industry Talk" class="w-full h-48 object-cover filter grayscale-[30%]">
                            
                            <div class="date-badge">
                                <i class="fas fa-calendar-alt mr-1"></i> February 28, 2025
                            </div>
                            
                            <div class="category-badge category-workshop">
                                Talk
                            </div>
                            
                            <div class="status-badge status-ended">
                                Ended
                            </div>
                        </div>
                        
                        <div class="p-5">
                            <div class="flex justify-between items-start mb-3">
                                <h3 class="text-lg font-bold text-gray-800">Gaming Industry Talk</h3>
                                <div class="flex items-center">
                                    <span class="text-xs bg-gray-200 text-gray-700 px-2 py-1 rounded-full flex items-center">
                                        <i class="fas fa-check-circle mr-1"></i> Attended
                                    </span>
                                </div>
                            </div>
                            
                            <p class="text-sm text-gray-600 mb-4">Industry professionals discussed the future of gaming and emerging technologies.</p>
                            
                            <div class="mt-4 flex justify-between">
                                <button class="px-4 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition flex items-center text-sm">
                                    <i class="fas fa-video mr-2"></i> Watch Recording
                                </button>
                                <button class="px-4 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition flex items-center text-sm">
                                    <i class="fas fa-file-alt mr-2"></i> Notes
                                </button>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Past Event Card 3 -->
                    <div class="event-card shadow-sm opacity-80 hover:opacity-100 transition">
                        <div class="relative">
                            <img src="/api/placeholder/400/250" alt="Game Launch Party" class="w-full h-48 object-cover filter grayscale-[30%]">
                            
                            <div class="date-badge">
                                <i class="fas fa-calendar-alt mr-1"></i> February 10, 2025
                            </div>
                            
                            <div class="category-badge category-social">
                                Launch Party
                            </div>
                            
                            <div class="status-badge status-ended">
                                Ended
                            </div>
                        </div>
                        
                        <div class="p-5">
                            <div class="flex justify-between items-start mb-3">
                                <h3 class="text-lg font-bold text-gray-800">Elden Ring 2 Launch Party</h3>
                                <div class="flex items-center">
