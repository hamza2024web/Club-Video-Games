    <!-- JavaScript -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Activation des filtres
            const filterPills = document.querySelectorAll('.filter-pill');
            const gameCards = document.querySelectorAll('.game-card');
            const searchInput = document.getElementById('search-input');
            const clearSearchButton = document.getElementById('clear-search');
            const gameDetailsModal = document.getElementById('game-details-modal');
            const modalContent = document.getElementById('modal-content');
            const closeModalButton = document.getElementById('close-modal');
            
            // Gestion des filtres
            filterPills.forEach(pill => {
                pill.addEventListener('click', function() {
                    // Retirer la classe active de tous les pilules
                    filterPills.forEach(p => p.classList.remove('active'));
                    
                    // Ajouter la classe active à la pilule cliquée
                    this.classList.add('active');
                    
                    // Récupérer la valeur du filtre
                    const filter = this.getAttribute('data-filter');
                    
                    // Filtrer les cartes de jeux
                    gameCards.forEach(card => {
                        if (filter === 'all') {
                            card.style.display = 'block';
                        } else if (filter === 'installed') {
                            if (card.getAttribute('data-installed') === 'yes') {
                                card.style.display = 'block';
                            } else {
                                card.style.display = 'none';
                            }
                        } else if (filter === 'not-installed') {
                            if (card.getAttribute('data-installed') === 'no' || card.getAttribute('data-installed') === 'installing') {
                                card.style.display = 'block';
                            } else {
                                card.style.display = 'none';
                            }
                        } else {
                            // Filtre par genre
                            if (card.getAttribute('data-category') === filter) {
                                card.style.display = 'block';
                            } else {
                                card.style.display = 'none';
                            }
                        }
                    });
                });
            });
            
            // Recherche de jeux
            if (searchInput && clearSearchButton) {
                searchInput.addEventListener('input', function() {
                    const searchValue = this.value.toLowerCase();
                    
                    // Afficher ou masquer le bouton d'effacement
                    if (searchValue.length > 0) {
                        clearSearchButton.classList.remove('hidden');
                    } else {
                        clearSearchButton.classList.add('hidden');
                    }
                    
                    // Filtrer les cartes de jeux
                    gameCards.forEach(card => {
                        const gameName = card.querySelector('h3').textContent.toLowerCase();
                        
                        if (gameName.includes(searchValue)) {
                            card.style.display = 'block';
                        } else {
                            card.style.display = 'none';
                        }
                    });
                });
                
                clearSearchButton.addEventListener('click', function() {
                    searchInput.value = '';
                    searchInput.dispatchEvent(new Event('input'));
                    this.classList.add('hidden');
                });
            }
            
            // Tri des jeux
            const sortSelect = document.getElementById('sort-games');
            if (sortSelect) {
                sortSelect.addEventListener('change', function() {
                    const sortValue = this.value;
                    const gameCards = Array.from(document.querySelectorAll('.game-card'));
                    const gamesGrid = document.querySelector('#games-grid');
                    
                    // Trier les cartes
                    gameCards.sort((a, b) => {
                        const aName = a.querySelector('h3').textContent;
                        const bName = b.querySelector('h3').textContent;
                        
                        switch (sortValue) {
                            case 'alpha':
                                return aName.localeCompare(bName);
                            case 'alpha-desc':
                                return bName.localeCompare(aName);
                            case 'playtime':
                                // Trouver les temps de jeu
                                const aPlaytime = a.querySelector('span:contains("Temps de jeu")') 
                                    ? parseInt(a.querySelector('span:contains("Temps de jeu")').nextElementSibling.textContent) 
                                    : 0;
                                const bPlaytime = b.querySelector('span:contains("Temps de jeu")') 
                                    ? parseInt(b.querySelector('span:contains("Temps de jeu")').nextElementSibling.textContent) 
                                    : 0;
                                return bPlaytime - aPlaytime;
                            case 'size':
                                // Trouver les tailles de jeu
                                const aSize = a.querySelector('span:contains("Taille du jeu")') 
                                    ? parseFloat(a.querySelector('span:contains("Taille du jeu")').nextElementSibling.textContent) 
                                    : 0;
                                const bSize = b.querySelector('span:contains("Taille du jeu")') 
                                    ? parseFloat(b.querySelector('span:contains("Taille du jeu")').nextElementSibling.textContent) 
                                    : 0;
                                return bSize - aSize;
                            default: // Achat récent
                                return 0;
                        }
                    });
                    
                    // Réorganiser les cartes dans la grille
                    gameCards.forEach(card => {
                        card.remove();
                    });
                    gameCards.forEach(card => {
                        gamesGrid.appendChild(card);
                    });
                });
            }
            
            // Fonctions pour les jeux
            window.getGameDetails = function(gameId) {
                // Afficher le modal
                gameDetailsModal.classList.remove('hidden');
                document.getElementById('modal-loading').classList.remove('hidden');
                document.getElementById('modal-data').classList.add('hidden');
                
                // Animation
                setTimeout(() => {
                    modalContent.classList.remove('scale-95', 'opacity-0');
                    modalContent.classList.add('scale-100', 'opacity-100');
                    
                    // Simuler le chargement
                    setTimeout(() => {
                        document.getElementById('modal-loading').classList.add('hidden');
                        document.getElementById('modal-data').classList.remove('hidden');
                    }, 800);
                }, 10);
            };
            
            window.installGame = function(gameId) {
                Swal.fire({
                    title: 'Installation',
                    html: 'Préparation de l\'installation...',
                    allowOutsideClick: false,
                    showConfirmButton: false,
                    willOpen: () => {
                        Swal.showLoading();
                    }
                });
                
                // Simuler le début de l'installation
                setTimeout(() => {
                    Swal.fire({
                        title: 'Installation démarrée',
                        icon: 'success',
                        text: 'Le jeu est en cours d\'installation. Vous pouvez suivre la progression dans votre bibliothèque.',
                        confirmButtonColor: '#8B5CF6'
                    });
                }, 1500);
            };
            
            window.cancelInstall = function(gameId) {
                Swal.fire({
                    title: 'Suspendre l\'installation ?',
                    text: 'Vous pourrez reprendre l\'installation plus tard.',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#8B5CF6',
                    cancelButtonColor: '#d1d5db',
                    confirmButtonText: 'Suspendre',
                    cancelButtonText: 'Annuler'
                }).then((result) => {
                    if (result.isConfirmed) {
                        Swal.fire({
                            title: 'Installation suspendue',
                            icon: 'info',
                            text: 'L\'installation a été mise en pause.',
                            confirmButtonColor: '#8B5CF6'
                        });
                    }
                });
            };
            
            window.uninstallGame = function(gameId) {
                Swal.fire({
                    title: 'Désinstaller le jeu ?',
                    text: 'Vous pourrez le réinstaller plus tard. Vos sauvegardes seront conservées.',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#EF4444',
                    cancelButtonColor: '#d1d5db',
                    confirmButtonText: 'Désinstaller',
                    cancelButtonText: 'Annuler'
                }).then((result) => {
                    if (result.isConfirmed) {
                        // Fermer le modal
                        closeGameDetailsModal();
                        
                        // Afficher le message de confirmation
                        setTimeout(() => {
                            Swal.fire({
                                title: 'Jeu désinstallé',
                                icon: 'success',
                                text: 'Le jeu a été désinstallé avec succès.',
                                confirmButtonColor: '#8B5CF6'
                            });
                        }, 300);
                    }
                });
            };
            
            // Fermer le modal de détails
            function closeGameDetailsModal() {
                modalContent.classList.remove('scale-100', 'opacity-100');
                modalContent.classList.add('scale-95', 'opacity-0');
                
                setTimeout(() => {
                    gameDetailsModal.classList.add('hidden');
                }, 300);
            }
            
            // Ajouter l'événement de fermeture au bouton
            if (closeModalButton) {
                closeModalButton.addEventListener('click', closeGameDetailsModal);
            }
            
            // Fermer le modal en cliquant sur l'arrière-plan
            gameDetailsModal.addEventListener('click', function(e) {
                if (e.target === gameDetailsModal) {
                    closeGameDetailsModal();
                }
            });
            
            // Animation des cartes de jeu
            const animateCards = () => {
                const cards = document.querySelectorAll('.game-card');
                cards.forEach((card, index) => {
                    setTimeout(() => {
                        card.style.opacity = '1';
                        card.style.transform = 'translateY(0)';
                    }, 100 * index);
                });
            };
            
            // Initialiser les cartes avec une opacité de 0 et une translation vers le bas
            const initCards = () => {
                const cards = document.querySelectorAll('.game-card');
                cards.forEach(card => {
                    card.style.opacity = '0';
                    card.style.transform = 'translateY(20px)';
                    card.style.transition = 'all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1)';
                });
                
                // Démarrer l'animation après un court délai
                setTimeout(animateCards, 300);
            };
            
            // Initialiser les animations au chargement de la page
            initCards();
        });
    document.addEventListener('DOMContentLoaded', function() {
