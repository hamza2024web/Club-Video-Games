<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GamersHub - Member Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap');
        
        body {
            font-family: 'Poppins', sans-serif;
        }
        
        .game-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        
        .game-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        }

        .sidebar-item {
            position: relative;
            overflow: hidden;
        }
        
        .sidebar-item::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 0;
            height: 2px;
            background-color: white;
            transition: width 0.3s ease;
        }
        
        .sidebar-item:hover::after {
            width: 100%;
        }

        .badge-pulse {
            animation: pulse 2s infinite;
        }

        @keyframes pulse {
            0% {
                transform: scale(1);
            }
            50% {
                transform: scale(1.1);
            }
            100% {
                transform: scale(1);
            }
        }

        .stat-card {
            position: relative;
            overflow: hidden;
        }

        .stat-card::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(255,255,255,0.3) 0%, rgba(255,255,255,0) 70%);
            transform: rotate(45deg);
            z-index: 1;
            opacity: 0;
            transition: opacity 0.6s ease;
        }

        .stat-card:hover::before {
            opacity: 1;
        }
        
        .custom-scrollbar::-webkit-scrollbar {
            width: 6px;
        }
        
        .custom-scrollbar::-webkit-scrollbar-track {
            background: #f1f1f1;
            border-radius: 10px;
        }
        
        .custom-scrollbar::-webkit-scrollbar-thumb {
            background: #8b5cf6;
            border-radius: 10px;
        }
    </style>
</head>
<body class="bg-gray-100">
    <div class="flex min-h-screen">
        <!-- Sidebar -->
        <aside class="w-64 bg-gradient-to-br from-indigo-900 via-purple-800 to-indigo-900 text-white min-h-screen p-6 relative">
            <div class="mb-8 text-center">
                <div class="flex justify-center mb-3">
                    <i class="fas fa-gamepad text-4xl text-purple-300"></i>
                </div>
                <h1 class="text-2xl font-bold">GamersHub</h1>
                <p class="text-sm text-purple-200">Member Portal</p>
            </div>

            <nav class="flex-grow">
                <ul class="space-y-1">
                    <li><a href="/member/dashboard" class="sidebar-item flex items-center p-3 bg-indigo-700 rounded-lg transition"><i class="fas fa-home mr-3 text-purple-300"></i>Dashboard</a></li>
                    <li><a href="/member/tournaments" class="sidebar-item flex items-center p-3 hover:bg-indigo-700 rounded-lg transition"><i class="fas fa-trophy mr-3 text-purple-300"></i>Tournaments</a></li>
                    <li><a href="/member/events" class="sidebar-item flex items-center p-3 hover:bg-indigo-700 rounded-lg transition"><i class="fas fa-calendar-alt mr-3 text-purple-300"></i>Events
                        {% if notification.notification_number|default(0) > 0 %}
                            <div class="relative">
                                <span class="flex h-5 items-center justify-center">
                                    <span class="animate-ping absolute h-4 w-4 rounded-full bg-red-400 opacity-75 ml-10"></span>
                                        <span class="relative bg-red-500 text-white text-xs font-bold px-2 py-0.5 rounded-full min-w-[1.25rem] text-center ml-10">
                                            {{notification.notification_number|default(0)}}
                                        </span>
                                </span>
                            </div>
                        {% endif %}
                    </a></li>
                    <li><a href="/member/boutique" class="sidebar-item flex items-center p-3 hover:bg-indigo-700 rounded-lg transition"><i class="fas fa-store mr-3 w-5 sidebar-icon text-purple-300"></i>Boutique</a></li>
                    <li><a href="/member/games" class="sidebar-item flex items-center p-3 hover:bg-indigo-700 rounded-lg transition"><i class="fas fa-gamepad mr-3 text-purple-300"></i>My Games</a></li>
                    <li><a href="/member/profile" class="sidebar-item flex items-center p-3 hover:bg-indigo-700 rounded-lg transition"><i class="fas fa-user mr-3 text-purple-300"></i>Profile</a></li>
                </ul>
            </nav>

            <div class="absolute bottom-0 left-0 right-0 p-4">
                <div class="flex items-center space-x-2 mb-3 p-2 rounded-lg bg-indigo-800/50">
                    <img src="/{{member.profile_photo}}" class="rounded-full border-2 border-purple-300 h-20 w-20" alt="Member Profile">
                    <div>
                        <p class="text-sm font-medium">{{member.name}}</p>
                        <div class="flex items-center">
                            <i class="fas fa-circle text-green-500 mr-1 text-xs"></i>
                            <p class="text-xs text-purple-300">Online</p>
                        </div>
                        <p class="text-xs text-purple-300 mt-1">Solde: {{my_solde}} €</p>
                    </div>
                </div>
                <!-- Mini Account Balance -->
                <div class="p-3 border-t border-indigo-800 sidebar-footer">
                    <div class="bg-indigo-800 rounded-lg p-2 text-center">
                        <div class="text-xs">Solde: <span class="font-bold">{{my_solde}} €</span></div>
                        <button class="mt-1 text-xs px-2 py-0.5 bg-purple-500 hover:bg-purple-600 rounded-full transition duration-200">
                            Recharger
                        </button>
                    </div>
                </div>
                <a href="/logout">
                    <button class="w-full bg-pink-600 hover:bg-pink-700 text-white py-2 rounded-lg transition flex items-center justify-center">
                        <i class="fas fa-sign-out-alt mr-2"></i>
                        Logout
                    </button>
                </a>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="flex-1 p-8">
            <!-- Header -->
            <header class="flex justify-between items-center mb-8">
                <div>
                    <h1 class="text-2xl font-bold text-gray-800">Member Dashboard</h1>
                    <p class="text-gray-500">Welcome back, {{member.name}}! Here's what's happening today.</p>
                </div>
            </header>

            <!-- Stats Overview -->
            <section class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-10">
                <div class="stat-card bg-white p-6 rounded-xl shadow-sm border-l-4 border-purple-500">
                    <div class="flex justify-between items-center">
                        <div>
                            <h3 class="text-gray-500 text-sm font-medium">Total Games</h3>
                            <p class="text-3xl font-bold text-gray-800">{{Jeux_disponibles.number_jeux}}</p>
                        </div>
                        <div class="bg-purple-100 p-3 rounded-lg">
                            <i class="fas fa-gamepad text-purple-600 text-2xl"></i>
                        </div>
                    </div>
                </div>
                <div class="stat-card bg-white p-6 rounded-xl shadow-sm border-l-4 border-green-500">
                    <div class="flex justify-between items-center">
                        <div>
                            <h3 class="text-gray-500 text-sm font-medium">Tournaments</h3>
                            <p class="text-3xl font-bold text-gray-800">{{tournoi_inscrit.tournoi_inscrit}}</p>
                        </div>
                        <div class="bg-green-100 p-3 rounded-lg">
                            <i class="fas fa-trophy text-green-600 text-2xl"></i>
                        </div>
                    </div>
                </div>
                <div class="stat-card bg-white p-6 rounded-xl shadow-sm border-l-4 border-blue-500">
                    <div class="flex justify-between items-center">
                        <div>
                            <h3 class="text-gray-500 text-sm font-medium">Friends</h3>
                            <p class="text-3xl font-bold text-gray-800">42</p>
                        </div>
                        <div class="bg-blue-100 p-3 rounded-lg">
                            <i class="fas fa-users text-blue-600 text-2xl"></i>
                        </div>
                    </div>
                </div>
                <div class="stat-card bg-white p-6 rounded-xl shadow-sm border-l-4 border-yellow-500">
                    <div class="flex justify-between items-center">
                        <div>
                            <h3 class="text-gray-500 text-sm font-medium">Reward Points</h3>
                            <p class="text-3xl font-bold text-gray-800">{{points.points|default(0)}}</p>
                        </div>
                        <div class="bg-yellow-100 p-3 rounded-lg">
                            <i class="fas fa-star text-yellow-600 text-2xl"></i>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Main Content Grid -->
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                <!-- Left Column - Activity & Games -->
                <div class="lg:col-span-2 space-y-8">
                    <!-- Recently Played Games -->
                    <section class="bg-white rounded-xl shadow-sm p-6">
                        <div class="flex justify-between items-center mb-6">
                            <h2 class="text-xl font-bold text-gray-800 flex items-center">
                                <i class="fas fa-gamepad mr-2 text-purple-600"></i>
                                Recently Played Games
                            </h2>
                            <a href="/member/games" class="text-sm text-purple-600 hover:text-purple-800 transition">View All</a>
                        </div>
                        
                        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                            <!-- Game 1 -->
                            {% for game in myGames %}
                            <div class="game-card flex bg-gray-50 rounded-xl overflow-hidden border border-gray-100">
                                <div class="w-1/3">
                                    <img src="/{{game.image}}" alt="{{game.nom_de_jeu}}" class="w-full h-full object-cover">
                                </div>
                                <div class="w-2/3 p-4">
                                    <h3 class="font-bold text-gray-900">{{game.nom_de_jeu}}</h3>
                                    <div class="flex items-center mt-1 mb-2">
                                        <div class="text-xs bg-green-100 text-green-800 px-2 py-0.5 rounded-full">
                                            {{game.plateforme}}
                                        </div>
                                        <div class="text-xs text-gray-500 ml-2">
                                            <i class="fas fa-clock mr-1"></i> 12h played
                                        </div>  
                                    </div>
                                    <button class="w-full mt-1 px-3 py-1 bg-purple-100 text-purple-700 rounded-lg text-xs hover:bg-purple-200 transition">
                                        Play Now
                                    </button>
                                </div>
                            </div>
                            {% endfor %}
                        </div>
                    </section>
                    
                    <!-- Upcoming Tournaments -->
                    <section class="bg-white rounded-xl shadow-sm p-6">
                        <div class="flex justify-between items-center mb-6">
                            <h2 class="text-xl font-bold text-gray-800 flex items-center">
                                <i class="fas fa-trophy mr-2 text-purple-600"></i>
                                Upcoming Tournaments
                            </h2>
                            <a href="/member/tournaments" class="text-sm text-purple-600 hover:text-purple-800 transition">View All</a>
                        </div>
                        
                        <div class="space-y-4">
                        {% for tounroi in mytounament %}
                            <!-- Tournament 1 -->
                            <div class="game-card flex items-center p-4 bg-gray-50 rounded-xl border border-gray-100">
                                <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center mr-4">
                                    <i class="fas fa-crosshairs text-purple-600"></i>
                                </div>
                                <div class="flex-1">
                                    <h3 class="font-bold text-gray-900">{{tounroi.name}}</h3>
                                    <p class="text-sm text-gray-500">{{tounroi.date_de_debut}}</p>
                                </div>
                                <div class="flex items-center space-x-3">
                                    <span class="px-2 py-1 bg-green-100 text-green-800 text-xs rounded-full flex items-center">
                                        <i class="fas fa-check-circle mr-1"></i> Registered
                                    </span>
                                    <button class="p-2 text-gray-400 hover:text-gray-600">
                                        <i class="fas fa-ellipsis-v"></i>
                                    </button>
                                </div>
                            </div>
                        {% endfor %}
                        </div>
                    </section>
                    
                    <!-- Activity Feed -->
                    <section class="bg-white rounded-xl shadow-sm p-6">
                        <div class="flex justify-between items-center mb-6">
                            <h2 class="text-xl font-bold text-gray-800 flex items-center">
                                <i class="fas fa-stream mr-2 text-purple-600"></i>
                                Activity Feed
                            </h2>
                            <button class="text-sm text-gray-500 hover:text-gray-700 transition">
                                <i class="fas fa-filter"></i> Filter
                            </button>
                        </div>
                        
                        <div class="space-y-6 custom-scrollbar max-h-80 overflow-y-auto pr-2">
                            <!-- Gaming Activity Notifications -->
                            {% for notification in notificationsContent %}
                                <!-- Notification Item with Hover Effect and Better Layout -->
                                <div class="p-4 border-b border-gray-100 hover:bg-blue-50 transition-all {% if notification.is_read %}opacity-70{% else %}bg-blue-50{% endif %}">
                                    <div class="flex">
                                        <!-- Icon Based on Notification Type -->
                                        <div class="flex-shrink-0 mr-3">
                                            {% if notification.type == 'friend_request' %}
                                                <div class="w-10 h-10 rounded-full bg-purple-100 flex items-center justify-center">
                                                    <i class="fas fa-user-plus text-purple-600"></i>
                                                </div>
                                            {% elseif notification.type == 'tournament_invitation' %}
                                                <div class="w-10 h-10 rounded-full bg-blue-100 flex items-center justify-center">
                                                    <i class="fas fa-trophy text-blue-600"></i>
                                                </div>
                                            {% elseif notification.type == 'achievement_unlocked'%}
                                                <div class="w-10 h-10 rounded-full bg-yellow-100 flex items-center justify-center">
                                                    <i class="fas fa-medal text-yellow-600"></i>
                                                </div>
                                            {% elseif notification.type == 'tournament_started' %}
                                                <div class="w-10 h-10 rounded-full bg-green-100 flex items-center justify-center">
                                                    <i class="fas fa-users text-green-600"></i>
                                                </div>
                                            {% elseif notification.type == 'match_starting' %}
                                                <div class="w-10 h-10 rounded-full bg-red-100 flex items-center justify-center">
                                                    <i class="fas fa-gamepad text-red-600"></i>
                                                </div>
                                            {% elseif notification.type == 'live_stream' %}
                                                <div class="w-10 h-10 rounded-full bg-pink-100 flex items-center justify-center">
                                                    <i class="fas fa-broadcast-tower text-pink-600"></i>
                                                </div>
                                            {% elseif notification.type == 'rank_up' %}
                                                <div class="w-10 h-10 rounded-full bg-indigo-100 flex items-center justify-center">
                                                    <i class="fas fa-chart-line text-indigo-600"></i>
                                                </div>
                                            {% elseif notification.type == 'game_update' %}
                                                <div class="w-10 h-10 rounded-full bg-cyan-100 flex items-center justify-center">
                                                    <i class="fas fa-download text-cyan-600"></i>
                                                </div>
                                            
                                            {# Additional gaming notification types with icons #}
                                            {% elseif notification.type == 'direct_message' %}
                                                <div class="w-10 h-10 rounded-full bg-violet-100 flex items-center justify-center">
                                                    <i class="fas fa-comment-alt text-violet-600"></i>
                                                </div>
                                            {% elseif notification.type == 'game_invite' %}
                                                <div class="w-10 h-10 rounded-full bg-amber-100 flex items-center justify-center">
                                                    <i class="fas fa-plus-circle text-amber-600"></i>
                                                </div>
                                            {% elseif notification.type == 'new_follower' %}
                                                <div class="w-10 h-10 rounded-full bg-blue-100 flex items-center justify-center">
                                                    <i class="fas fa-user-friends text-blue-600"></i>
                                                </div>
                                            {% elseif notification.type == 'clan_invitation' %}
                                                <div class="w-10 h-10 rounded-full bg-purple-100 flex items-center justify-center">
                                                    <i class="fas fa-flag text-purple-600"></i>
                                                </div>
                                            {% elseif notification.type == 'event_reminder' %}
                                                <div class="w-10 h-10 rounded-full bg-emerald-100 flex items-center justify-center">
                                                    <i class="fas fa-calendar-day text-emerald-600"></i>
                                                </div>
                                            {% elseif notification.type == 'server_maintenance' %}
                                                <div class="w-10 h-10 rounded-full bg-orange-100 flex items-center justify-center">
                                                    <i class="fas fa-wrench text-orange-600"></i>
                                                </div>
                                            {% elseif notification.type == 'new_season' %}
                                                <div class="w-10 h-10 rounded-full bg-teal-100 flex items-center justify-center">
                                                    <i class="fas fa-calendar-alt text-teal-600"></i>
                                                </div>
                                            {% elseif notification.type == 'gift_received' %}
                                                <div class="w-10 h-10 rounded-full bg-rose-100 flex items-center justify-center">
                                                    <i class="fas fa-gift text-rose-600"></i>
                                                </div>
                                            {% elseif notification.type == 'challenge_completed' %}
                                                <div class="w-10 h-10 rounded-full bg-lime-100 flex items-center justify-center">
                                                    <i class="fas fa-tasks text-lime-600"></i>
                                                </div>
                                            {% elseif notification.type == 'level_up' %}
                                                <div class="w-10 h-10 rounded-full bg-amber-100 flex items-center justify-center">
                                                    <i class="fas fa-arrow-circle-up text-amber-600"></i>
                                                </div>
                                            {% elseif notification.type == 'friend_online' %}
                                                <div class="w-10 h-10 rounded-full bg-green-100 flex items-center justify-center">
                                                    <i class="fas fa-circle text-green-600"></i>
                                                </div>
                                            {% elseif notification.type == 'friend_playing' %}
                                                <div class="w-10 h-10 rounded-full bg-blue-100 flex items-center justify-center">
                                                    <i class="fas fa-play text-blue-600"></i>
                                                </div>
                                            {% elseif notification.type == 'leaderboard_update' %}
                                                <div class="w-10 h-10 rounded-full bg-purple-100 flex items-center justify-center">
                                                    <i class="fas fa-crown text-purple-600"></i>
                                                </div>
                                            {% elseif notification.type == 'esports_event' %}
                                                <div class="w-10 h-10 rounded-full bg-red-100 flex items-center justify-center">
                                                    <i class="fas fa-globe text-red-600"></i>
                                                </div>
                                            {% elseif notification.type == 'quest_available' %}
                                                <div class="w-10 h-10 rounded-full bg-amber-100 flex items-center justify-center">
                                                    <i class="fas fa-scroll text-amber-600"></i>
                                                </div>
                                            {% elseif notification.type == 'quest_completed' %}
                                                <div class="w-10 h-10 rounded-full bg-green-100 flex items-center justify-center">
                                                    <i class="fas fa-check-double text-green-600"></i>
                                                </div>
                                            {% elseif notification.type == 'reward_earned' %}
                                                <div class="w-10 h-10 rounded-full bg-yellow-100 flex items-center justify-center">
                                                    <i class="fas fa-coins text-yellow-600"></i>
                                                </div>
                                            {% elseif notification.type == 'friend_birthday' %}
                                                <div class="w-10 h-10 rounded-full bg-pink-100 flex items-center justify-center">
                                                    <i class="fas fa-birthday-cake text-pink-600"></i>
                                                </div>
                                            {% elseif notification.type == 'screenshot_shared' %}
                                                <div class="w-10 h-10 rounded-full bg-blue-100 flex items-center justify-center">
                                                    <i class="fas fa-camera text-blue-600"></i>
                                                </div>
                                            {% elseif notification.type == 'stream_highlight' %}
                                                <div class="w-10 h-10 rounded-full bg-purple-100 flex items-center justify-center">
                                                    <i class="fas fa-video text-purple-600"></i>
                                                </div>
                                            {% elseif notification.type == 'new_badge' %}
                                                <div class="w-10 h-10 rounded-full bg-teal-100 flex items-center justify-center">
                                                    <i class="fas fa-certificate text-teal-600"></i>
                                                </div>
                                            {% elseif notification.type == 'custom_match' %}
                                                <div class="w-10 h-10 rounded-full bg-indigo-100 flex items-center justify-center">
                                                    <i class="fas fa-user-cog text-indigo-600"></i>
                                                </div>
                                            {% elseif notification.type == 'account_security' %}
                                                <div class="w-10 h-10 rounded-full bg-red-100 flex items-center justify-center">
                                                    <i class="fas fa-shield-alt text-red-600"></i>
                                                </div>
                                            {% else %}
                                                <div class="w-10 h-10 rounded-full bg-gray-100 flex items-center justify-center">
                                                    <i class="fas fa-bell text-gray-600"></i>
                                                </div>
                                            {% endif %}
                                        </div>
                                        
                                        <!-- Content Area with Message and Time -->
                                        <div class="flex-1">
                                            <!-- Message with Type Badge -->
                                            <div class="flex flex-wrap items-start gap-2 mb-1">
                                                <p class="text-sm text-gray-800 font-medium">{{notification.message}}</p>
                                                
                                                {% if notification.type == 'friend_request' %}
                                                    <span class="px-2 py-0.5 text-xs rounded-full font-medium bg-purple-100 text-purple-800 border border-purple-200">
                                                        Friend Request
                                                    </span>
                                                {% elseif notification.type == 'tournament_invitation' %}
                                                    <span class="px-2 py-0.5 text-xs rounded-full font-medium bg-blue-100 text-blue-800 border border-blue-200">
                                                        Tournament
                                                    </span>
                                                {% elseif notification.type == 'achievement_unlocked' %}
                                                    <span class="px-2 py-0.5 text-xs rounded-full font-medium bg-yellow-100 text-yellow-800 border border-yellow-200">
                                                        Achievement
                                                    </span>
                                                {% elseif notification.type == 'team_invitation' %}
                                                    <span class="px-2 py-0.5 text-xs rounded-full font-medium bg-green-100 text-green-800 border border-green-200">
                                                        Team Invite
                                                    </span>
                                                {% elseif notification.type == 'match_starting' %}
                                                    <span class="px-2 py-0.5 text-xs rounded-full font-medium bg-red-100 text-red-800 border border-red-200">
                                                        Starting Soon
                                                    </span>
                                                {% elseif notification.type == 'live_stream' %}
                                                    <span class="px-2 py-0.5 text-xs rounded-full font-medium bg-pink-100 text-pink-800 border border-pink-200">
                                                        Live
                                                    </span>
                                                {% elseif notification.type == 'rank_up' %}
                                                    <span class="px-2 py-0.5 text-xs rounded-full font-medium bg-indigo-100 text-indigo-800 border border-indigo-200">
                                                        Rank Up
                                                    </span>
                                                {% elseif notification.type == 'game_update' %}
                                                    <span class="px-2 py-0.5 text-xs rounded-full font-medium bg-cyan-100 text-cyan-800 border border-cyan-200">
                                                        Update
                                                    </span>
                                                
                                                {# Additional notification type badges #}
                                                {% elseif notification.type == 'direct_message' %}
                                                    <span class="px-2 py-0.5 text-xs rounded-full font-medium bg-violet-100 text-violet-800 border border-violet-200">
                                                        Message
                                                    </span>
                                                {% elseif notification.type == 'game_invite' %}
                                                    <span class="px-2 py-0.5 text-xs rounded-full font-medium bg-amber-100 text-amber-800 border border-amber-200">
                                                        Game Invite
                                                    </span>
                                                {% elseif notification.type == 'new_follower' %}
                                                    <span class="px-2 py-0.5 text-xs rounded-full font-medium bg-blue-100 text-blue-800 border border-blue-200">
                                                        New Follower
                                                    </span>
                                                {% elseif notification.type == 'clan_invitation' %}
                                                    <span class="px-2 py-0.5 text-xs rounded-full font-medium bg-purple-100 text-purple-800 border border-purple-200">
                                                        Clan Invite
                                                    </span>
                                                {% elseif notification.type == 'event_reminder' %}
                                                    <span class="px-2 py-0.5 text-xs rounded-full font-medium bg-emerald-100 text-emerald-800 border border-emerald-200">
                                                        Event
                                                    </span>
                                                {% elseif notification.type == 'server_maintenance' %}
                                                    <span class="px-2 py-0.5 text-xs rounded-full font-medium bg-orange-100 text-orange-800 border border-orange-200">
                                                        Maintenance
                                                    </span>
                                                {% elseif notification.type == 'new_season' %}
                                                    <span class="px-2 py-0.5 text-xs rounded-full font-medium bg-teal-100 text-teal-800 border border-teal-200">
                                                        New Season
                                                    </span>
                                                {% elseif notification.type == 'gift_received' %}
                                                    <span class="px-2 py-0.5 text-xs rounded-full font-medium bg-rose-100 text-rose-800 border border-rose-200">
                                                        Gift
                                                    </span>
                                                {% elseif notification.type == 'challenge_completed' %}
                                                    <span class="px-2 py-0.5 text-xs rounded-full font-medium bg-lime-100 text-lime-800 border border-lime-200">
                                                        Challenge
                                                    </span>
                                                {% elseif notification.type == 'level_up' %}
                                                    <span class="px-2 py-0.5 text-xs rounded-full font-medium bg-amber-100 text-amber-800 border border-amber-200">
                                                        Level Up
                                                    </span>
                                                {% elseif notification.type == 'friend_online' %}
                                                    <span class="px-2 py-0.5 text-xs rounded-full font-medium bg-green-100 text-green-800 border border-green-200">
                                                        Online
                                                    </span>
                                                {% elseif notification.type == 'friend_playing' %}
                                                    <span class="px-2 py-0.5 text-xs rounded-full font-medium bg-blue-100 text-blue-800 border border-blue-200">
                                                        Playing
                                                    </span>
                                                {% elseif notification.type == 'leaderboard_update' %}
                                                    <span class="px-2 py-0.5 text-xs rounded-full font-medium bg-purple-100 text-purple-800 border border-purple-200">
                                                        Leaderboard
                                                    </span>
                                                {% elseif notification.type == 'esports_event' %}
                                                    <span class="px-2 py-0.5 text-xs rounded-full font-medium bg-red-100 text-red-800 border border-red-200">
                                                        Esports
                                                    </span>
                                                {% elseif notification.type == 'quest_available' %}
                                                    <span class="px-2 py-0.5 text-xs rounded-full font-medium bg-amber-100 text-amber-800 border border-amber-200">
                                                        New Quest
                                                    </span>
                                                {% elseif notification.type == 'quest_completed' %}
                                                    <span class="px-2 py-0.5 text-xs rounded-full font-medium bg-green-100 text-green-800 border border-green-200">
                                                        Quest Complete
                                                    </span>
                                                {% elseif notification.type == 'reward_earned' %}
                                                    <span class="px-2 py-0.5 text-xs rounded-full font-medium bg-yellow-100 text-yellow-800 border border-yellow-200">
                                                        Reward
                                                    </span>
                                                {% endif %}
                                            </div>
                                            
                                            <!-- Additional Content Based on Notification Type -->
                                            {% if notification.type == 'friend_request' or notification.type == 'team_invitation' or notification.type == 'clan_invitation' %}
                                                <div class="mt-2 flex space-x-2">
                                                    <button class="px-3 py-1.5 bg-purple-600 text-white text-xs font-medium rounded-lg hover:bg-purple-700 transition">
                                                        Accept
                                                    </button>
                                                    <button class="px-3 py-1.5 bg-gray-200 text-gray-700 text-xs font-medium rounded-lg hover:bg-gray-300 transition">
                                                        Decline
                                                    </button>
                                                </div>
                                            {% elseif notification.type == 'tournament_invitation' or notification.type == 'match_starting' or notification.type == 'game_invite' or notification.type == 'event_reminder' %}
                                                <div class="mt-2 flex space-x-2">
                                                    <button class="px-3 py-1.5 bg-purple-600 text-white text-xs font-medium rounded-lg hover:bg-purple-700 transition">
                                                        Join Now
                                                    </button>
                                                    <button class="px-3 py-1.5 bg-gray-200 text-gray-700 text-xs font-medium rounded-lg hover:bg-gray-300 transition">
                                                        Maybe Later
                                                    </button>
                                                </div>
                                            {% elseif notification.type == 'achievement_unlocked' or notification.type == 'quest_completed' or notification.type == 'level_up' or notification.type == 'rank_up' %}
                                                <div class="mt-2 flex">
                                                    <button class="px-3 py-1.5 bg-gray-200 text-gray-700 text-xs font-medium rounded-lg hover:bg-gray-300 transition flex items-center">
                                                        <i class="fas fa-share-alt mr-1.5"></i> Share
                                                    </button>
                                                </div>
                                            {% elseif notification.type == 'live_stream' or notification.type == 'esports_event' or notification.type == 'stream_highlight' %}
                                                <div class="mt-2">
                                                    <button class="px-3 py-1.5 bg-purple-600 text-white text-xs font-medium rounded-lg hover:bg-purple-700 transition flex items-center w-auto inline-flex">
                                                        <i class="fas fa-play mr-1.5"></i> Watch Now
                                                    </button>
                                                </div>
                                            {% elseif notification.type == 'game_update' %}
                                                <div class="mt-2 flex items-center w-full max-w-xs">
                                                    <div class="w-full bg-gray-200 rounded-full h-2">
                                                        <div class="bg-purple-600 h-2 rounded-full" style="width: {{notification.progress}}%"></div>
                                                    </div>
                                                    <span class="ml-2 text-xs text-gray-600">{{notification.progress}}%</span>
                                                </div>
                                            {% elseif notification.type == 'gift_received' %}
                                                <div class="mt-2 flex space-x-2">
                                                    <button class="px-3 py-1.5 bg-purple-600 text-white text-xs font-medium rounded-lg hover:bg-purple-700 transition flex items-center">
                                                        <i class="fas fa-box-open mr-1.5"></i> Open
                                                    </button>
                                                    <button class="px-3 py-1.5 bg-gray-200 text-gray-700 text-xs font-medium rounded-lg hover:bg-gray-300 transition flex items-center">
                                                        <i class="fas fa-gift mr-1.5"></i> Send Gift Back
                                                    </button>
                                                </div>
                                            {% elseif notification.type == 'direct_message' %}
                                                <div class="mt-2 flex">
                                                    <button class="px-3 py-1.5 bg-purple-600 text-white text-xs font-medium rounded-lg hover:bg-purple-700 transition flex items-center">
                                                        <i class="fas fa-reply mr-1.5"></i> Reply
                                                    </button>
                                                </div>
                                            {% elseif notification.type == 'friend_online' or notification.type == 'friend_playing' %}
                                                <div class="mt-2 flex space-x-2">
                                                    <button class="px-3 py-1.5 bg-purple-600 text-white text-xs font-medium rounded-lg hover:bg-purple-700 transition flex items-center">
                                                        <i class="fas fa-gamepad mr-1.5"></i> Join Game
                                                    </button>
                                                    <button class="px-3 py-1.5 bg-gray-200 text-gray-700 text-xs font-medium rounded-lg hover:bg-gray-300 transition flex items-center">
                                                        <i class="fas fa-comment mr-1.5"></i> Message
                                                    </button>
                                                </div>
                                            {% elseif notification.type == 'quest_available' %}
                                                <div class="mt-2 flex">
                                                    <button class="px-3 py-1.5 bg-purple-600 text-white text-xs font-medium rounded-lg hover:bg-purple-700 transition flex items-center">
                                                        <i class="fas fa-scroll mr-1.5"></i> Accept Quest
                                                    </button>
                                                </div>
                                            {% elseif notification.type == 'account_security' %}
                                                <div class="mt-2 flex">
                                                    <button class="px-3 py-1.5 bg-red-600 text-white text-xs font-medium rounded-lg hover:bg-red-700 transition flex items-center">
                                                        <i class="fas fa-shield-alt mr-1.5"></i> Review Now
                                                    </button>
                                                </div>
                                            {% endif %}
                                            
                                            <p class="text-xs text-gray-500 mt-2 flex items-center">
                                                <i class="far fa-clock mr-1"></i>
                                                {{notification.created_at|date("d/m/Y H:i")}}
                                            </p>
                                        </div>
                                        
                                        <div class="ml-2">
                                            <button class="mark-read-btn w-8 h-8 rounded-full hover:bg-white flex items-center justify-center transition-all" 
                                                data-id="{{notification.id}}">
                                                {% if notification.is_read %}
                                                    <i class="fas fa-check text-green-500"></i>
                                                {% else %}
                                                    <i class="far fa-circle text-gray-400 hover:text-blue-500"></i>
                                                {% endif %}
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </section>
                </div>
                
                <!-- Right Column - Sidebar Content -->
                <div class="space-y-8">
                    <!-- Profile Summary -->
                    <section class="bg-white rounded-xl shadow-sm p-6 relative overflow-hidden">
                        <!-- Cover image with img tag -->
                        <div class="absolute top-0 left-0 right-0 h-32 overflow-hidden">
                            <img src="/{{member.cover_photo}}" alt="Cover photo" class="w-full h-full object-cover">
                        </div>
                        
                        <!-- Improved profile section with more spacing -->
                        <div class="relative text-center pt-8">
                            <!-- Larger profile photo with enhanced border -->
                            <div class="inline-block rounded-full border-4 border-white shadow-md">
                                <img class="h-28 w-28 rounded-full object-cover" src="/{{member.profile_photo}}" alt="{{member.name}}'s profile">
                            </div>
                            
                            <!-- Improved typography -->
                            <h3 class="mt-3 text-xl font-bold text-gray-900">{{member.name}}</h3>
                            <p class="text-sm font-medium text-gray-500">Premium Member</p>
                            
                            <!-- Enhanced badges with improved spacing -->
                            <div class="flex justify-center space-x-3 mt-4">
                                <div class="px-4 py-1.5 bg-yellow-100 text-yellow-700 rounded-full text-xs font-semibold shadow-sm">
                                    ★ Elite Gamer
                                </div>
                            </div>
                            
                            <!-- Improved progress bar -->
                            <div class="mt-5 flex justify-center">
                                <div class="w-full max-w-xs bg-gray-200 rounded-full h-2.5">
                                    <div class="bg-gradient-to-r from-purple-600 to-indigo-600 h-2.5 rounded-full" style="width: 75%"></div>
                                </div>
                            </div>
                            <p class="mt-1.5 text-xs font-medium text-gray-500">Next level: 75% complete</p>
                        </div>
                        
                        <!-- Enhanced stats section with subtle borders -->
                        <div class="grid grid-cols-3 gap-4 mt-8 text-center">
                            <div class="bg-gray-50 rounded-lg py-3 px-2">
                                <p class="text-2xl font-bold text-gray-900">{{Jeux_disponibles.number_jeux}}</p>
                                <p class="text-xs font-medium text-gray-600">Games</p>
                            </div>
                            <div class="bg-gray-50 rounded-lg py-3 px-2">
                                <p class="text-2xl font-bold text-gray-900">42</p>
                                <p class="text-xs font-medium text-gray-600">Friends</p>
                            </div>
                            <div class="bg-gray-50 rounded-lg py-3 px-2">
                                <p class="text-2xl font-bold text-gray-900">{{tournoi_inscrit.tournoi_inscrit}}</p>
                                <p class="text-xs font-medium text-gray-600">Tournaments</p>
                            </div>
                        </div>
                        
                        <!-- Improved action button -->
                        <div class="mt-8">
                            <a href="/member/profile" class="block w-full text-center px-4 py-2.5 bg-indigo-600 hover:bg-indigo-700 text-white rounded-lg text-sm font-medium transition shadow-sm">
                                View Full Profile
                            </a>
                        </div>
                    </section>
                    
                    <!-- Friends Online -->
                    <section class="bg-white rounded-xl shadow-sm p-6">
                        <div class="flex justify-between items-center mb-6">
                            <h2 class="text-xl font-bold text-gray-800 flex items-center">
                                <i class="fas fa-user-friends mr-2 text-purple-600"></i>
                                Friends Online
                            </h2>
                            <a href="/member/friends" class="text-sm text-purple-600 hover:text-purple-800 transition">View All</a>
                        </div>
                        
                        <div class="space-y-4 custom-scrollbar max-h-64 overflow-y-auto pr-2">
                            {% for friend in friends %}
                            <div class="flex items-center justify-between">
                                <div class="flex items-center">
                                    <div class="relative">
                                        <img class="h-10 w-10 rounded-full" src="/{{friend.profile_photo}}" alt="{{friend.name}}">
                                        <span class="absolute bottom-0 right-0 h-3 w-3 rounded-full bg-green-500 border-2 border-white"></span>
                                    </div>
                                    <div class="ml-3">
                                        <p class="text-sm font-medium text-gray-900">{{friend.name}}
                                        <p class="text-sm font-medium text-gray-900">{{friend.email}}</p>
                                        <p class="text-xs text-gray-500">Playing Call of Duty</p>
                                    </div>
                                </div>
                                <button class="p-2 text-gray-400 hover:text-purple-600 transition">
                                    <i class="fas fa-comment-alt"></i>
                                </button>
                            </div>
                            {% endfor %}
                        </div>
                    </section>
                    

                </div>
            </div>
        </main>
    </div>
    
    <!-- Quick Action Button -->
    <button class="fixed bottom-6 right-6 p-4 bg-gradient-to-r from-purple-600 to-indigo-600 text-white rounded-full shadow-lg hover:from-purple-700 hover:to-indigo-700 transition z-50">
        <i class="fas fa-plus"></i>
    </button>
    
    <script>
        // You can add JavaScript for interactive features here
        document.addEventListener('DOMContentLoaded', function() {
            // Example: Toggle mobile navigation
            const mobileMenuButton = document.querySelector('.mobile-menu-button');
            const sidebar = document.querySelector('aside');
            
            if (mobileMenuButton) {
                mobileMenuButton.addEventListener('click', function() {
                    sidebar.classList.toggle('hidden');
                });
            }
        });
    </script>
</body>
</html>