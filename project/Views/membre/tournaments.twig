        <i class="fas fa-plus"></i>
    </button>
    
    <script>
        // Modal de rechargement
        document.addEventListener('DOMContentLoaded', function() {
            // Trouver le bouton "Recharger" dans la barre latérale
            const rechargeBtn = document.querySelector('.sidebar-footer button');
            const rechargeModal = document.getElementById('recharge-modal');
            const closeModalBtn = document.getElementById('close-recharge-modal');
            
            // Fonction pour ouvrir le modal
            function openRechargeModal() {
                if (rechargeModal) {
                    rechargeModal.classList.remove('hidden');
                    rechargeModal.classList.add('flex');
                }
            }
            
            // Fonction pour fermer le modal
            function closeRechargeModal() {
                if (rechargeModal) {
                    rechargeModal.classList.add('hidden');
                    rechargeModal.classList.remove('flex');
                }
            }
            
            // Ajouter un événement click au bouton "Recharger"
            if (rechargeBtn) {
                rechargeBtn.addEventListener('click', openRechargeModal);
            }
            
            // Ajouter un événement click au bouton de fermeture
            if (closeModalBtn) {
                closeModalBtn.addEventListener('click', closeRechargeModal);
            }
            
            // Fermer le modal quand on clique en dehors
            if (rechargeModal) {
                rechargeModal.addEventListener('click', function(e) {
                    if (e.target === rechargeModal) {
                        closeRechargeModal();
                    }
                });
            }
            
            // Gestion du formulaire de rechargement
            const rechargeForm = document.getElementById('recharge-form');
            
            // Gestionnaire d'événement pour la soumission du formulaire
            if (rechargeForm) {
                rechargeForm.addEventListener('submit', function(e) {
                    // Empêcher la soumission par défaut du formulaire
                    e.preventDefault();
                    
                    // Récupérer le montant saisi
                    const amount = document.getElementById('recharge-amount').value;
                    
                    // Afficher l'alerte de chargement
                    Swal.fire({
                        title: 'Rechargement en cours',
                        text: `Rechargement de ${amount} € en cours...`,
                        icon: 'info',
                        showConfirmButton: false,
                        allowOutsideClick: false,
                        didOpen: () => {
                            Swal.showLoading();
                        }
                    });
                    
                    // Soumettre le formulaire après un court délai pour montrer l'animation
                    setTimeout(() => {
                        rechargeForm.submit();
                    }, 1500);
                });
            }
            
            // Vérifier si l'URL contient le paramètre de succès
            const urlParams = new URLSearchParams(window.location.search);
            const currentPath = window.location.pathname;
            
            if (urlParams.has('Rechargement_de_votre_solde_réussite')) {
                Swal.fire({
                    title: 'Succès!',
                    text: 'Rechargement de votre solde réussi',
                    icon: 'success',
                    confirmButtonColor: '#8b5cf6'
                }).then(() => {
                    // Rediriger vers la même page mais sans les paramètres de query
                    window.history.replaceState({}, document.title, currentPath);
                });
            }
            
            // Vérifier si l'URL contient un message d'échec
            if (urlParams.has('Rechargement_de_votre_solde_échouée')) {
                Swal.fire({
                    title: 'Échec',
                    text: 'Le rechargement de votre solde a échoué. Veuillez réessayer.',
                    icon: 'error',
                    confirmButtonColor: '#8b5cf6'
                }).then(() => {
                    // Rediriger vers la même page mais sans les paramètres de query
                    window.history.replaceState({}, document.title, currentPath);
                });
            }
        });
    </script>
