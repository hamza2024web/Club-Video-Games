                    </div>
                    
                    <!-- Bouton de soumission -->
                    <button type="submit" class="w-full bg-gradient-to-r from-purple-600 to-indigo-600 hover:from-purple-700 hover:to-indigo-700 text-white py-3 rounded-lg transition-colors duration-300 mt-4">
                        Recharger mon compte
                    </button>
                    
                    <!-- Message de sécurité -->
                    <div class="text-center text-xs text-gray-500 mt-2 flex items-center justify-center">
                        <i class="fas fa-shield-alt mr-2 text-green-500"></i>
                        Paiement 100% sécurisé
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Scripts JavaScript -->
    <script>
        function toggleCart() {
            const cart = document.getElementById('shopping-cart');
            const overlay = document.getElementById('overlay');
            
            if (cart.classList.contains('translate-x-full')) {
                // Open cart
                cart.classList.remove('translate-x-full');
                overlay.classList.remove('hidden');
            } else {
                // Close cart
                cart.classList.add('translate-x-full');
                overlay.classList.add('hidden');
            }
        }
        // Variables globales
        let currentSlide = 0;
        const totalSlides = document.querySelectorAll('.carousel-item').length;

        /**
         * Gestion du carousel
         */
        // Navigation du carousel
        function moveCarousel(direction) {
            // Calculer le nouvel index
            currentSlide = (currentSlide + direction) % totalSlides;
            
            // Gestion de l'index négatif
            if (currentSlide < 0) {
                currentSlide = totalSlides - 1;
            }
            
            // Mettre à jour la position du carousel
            updateCarouselPosition();
        }

        // Sélectionner une slide spécifique
        function setCarouselSlide(slideIndex) {
            if (slideIndex >= 0 && slideIndex < totalSlides) {
                currentSlide = slideIndex;
                updateCarouselPosition();
            }
        }

        // Mettre à jour l'affichage du carousel
        function updateCarouselPosition() {
            // Récupérer tous les éléments du carousel
            const slides = document.querySelectorAll('.carousel-item');
            const dots = document.querySelectorAll('.carousel-dot');
            
            // Masquer toutes les slides
            slides.forEach(slide => {
                slide.style.display = 'none';
            });
            
            // Supprimer la classe active de tous les points
            dots.forEach(dot => {
                dot.classList.remove('active');
            });
            
            // Afficher la slide courante
            slides[currentSlide].style.display = 'block';
            
            // Ajouter la classe active au point courant
            dots[currentSlide].classList.add('active');
        }

        /**
         * Gestion des notifications
         */
        function showNotifications() {
            Swal.fire({
                title: 'Notifications',
                html: `
                    <div class="space-y-4 max-h-[400px] overflow-y-auto text-left">
                        <div class="p-3 border-l-4 border-purple-500 bg-purple-50 rounded">
                            <div class="flex justify-between items-start">
                                <p class="font-medium">Nouveau tournoi disponible</p>
                                <span class="text-xs text-gray-500">Aujourd'hui</span>
                            </div>
                            <p class="text-sm text-gray-600 mt-1">Un nouveau tournoi de FIFA 25 est ouvert aux inscriptions !</p>
                        </div>
                        <div class="p-3 border-l-4 border-green-500 bg-green-50 rounded">
                            <div class="flex justify-between items-start">
                                <p class="font-medium">Promo spéciale</p>
                                <span class="text-xs text-gray-500">Hier</span>
                            </div>
                            <p class="text-sm text-gray-600 mt-1">Profitez de 20% de réduction sur les jeux d'action ce week-end !</p>
                        </div>
                        <div class="p-3 border-l-4 border-blue-500 bg-blue-50 rounded">
                            <div class="flex justify-between items-start">
                                <p class="font-medium">Crédit ajouté</p>
                                <span class="text-xs text-gray-500">3 jours</span>
                            </div>
                            <p class="text-sm text-gray-600 mt-1">Votre compte a été crédité de 20€ suite à votre dernière recharge.</p>
                        </div>
                    </div>
                `,
                showConfirmButton: false,
                showCloseButton: true,
                width: '500px'
            });
        }

        /**
         * Initialisation au chargement de la page
         */
        document.addEventListener('DOMContentLoaded', function() {
            // Initialiser le carousel
            updateCarouselPosition();
            
            // Rotation automatique du carousel
            setInterval(() => {
                moveCarousel(1);
            }, 5000); // Changer les slides toutes les 5 secondes
            
            // Initialiser le panier et les favoris
            loadCartFromLocalStorage(2);
            updateCartUI();
            
            // Modal de rechargement
            const rechargeButtons = document.querySelectorAll('.recharge-btn');
            const rechargeModal = document.getElementById('recharge-modal');
            const closeRechargeModal = document.getElementById('close-recharge-modal');
            
            // Ouvrir le modal de rechargement
            rechargeButtons.forEach(button => {
                button.addEventListener('click', function() {
                    rechargeModal.classList.remove('hidden');
                    rechargeModal.classList.add('flex');
                });
            });
            
            // Fermer le modal de rechargement
            if (closeRechargeModal) {
                closeRechargeModal.addEventListener('click', function() {
                    rechargeModal.classList.add('hidden');
                    rechargeModal.classList.remove('flex');
                });
            }
            
            // Traitement du formulaire de rechargement
            const rechargeForm = document.getElementById('recharge-form');
            if (rechargeForm) {
                rechargeForm.addEventListener('submit', function(e) {
                    e.preventDefault();
                    
                    // Récupérer le montant
                    const amount = document.getElementById('recharge-amount').value;
                    
                    // Afficher l'animation de chargement
                    Swal.fire({
                        title: 'Rechargement en cours',
                        text: `Rechargement de ${amount} € en cours...`,
                        icon: 'info',
                        showConfirmButton: false,
                        allowOutsideClick: false,
                        didOpen: () => {
                            Swal.showLoading();
                        }
                    });
                    
                    // Soumettre le formulaire après un délai
                    setTimeout(() => {
                        rechargeForm.submit();
                    }, 1500);
                });
            }
            
            // Gestion des clics sur l'overlay
            document.getElementById('overlay').addEventListener('click', () => {
                document.getElementById('shopping-cart').classList.add('translate-x-full');
                document.getElementById('payment-modal').classList.add('hidden');
                document.getElementById('overlay').classList.add('hidden');
            });
            
            // Vérification des paramètres d'URL
            const urlParams = new URLSearchParams(window.location.search);
            
            // Notification de paiement réussi
            if (urlParams.has('paiment_réussite')) {
                Swal.fire({
                    title: "Succès!",
                    text: "Paiement réussi!",
                    icon: "success",
                    confirmButtonText: "OK",
                    timer: 3000 
                }).then(() => {
                    // Vider le panier après un paiement réussi
                    cart.length = 0;
                    saveCartToLocalStorage(1);
                    updateCartUI();
                    
                    // Rediriger pour enlever les paramètres d'URL
                    window.history.replaceState({}, document.title, window.location.pathname);
                });
            }
            
            // Notification de paiement échoué
            if (urlParams.has('paiment_échouée')) {
                Swal.fire({
                    title: "Échec",
                    text: "Veuillez vérifier votre solde!",
                    icon: "error",
                    confirmButtonText: "OK",
                    timer: 3000 
                }).then(() => {
                    window.history.replaceState({}, document.title, window.location.pathname);
                });
            }
            
            // Notification de rechargement réussi
            if (urlParams.get('message') === 'Rechargement de votre solde réussite' || 
                urlParams.has('Rechargement_de_votre_solde_réussite')) {
                Swal.fire({
                    title: 'Succès!',
                    text: 'Rechargement de votre solde réussi',
                    icon: 'success',
                    confirmButtonColor: '#8b5cf6'
                }).then(() => {
                    window.history.replaceState({}, document.title, window.location.pathname);
                });
            }
            
            // Notification de rechargement échoué
            if (urlParams.has('Rechargement_de_votre_solde_échouée')) {
                Swal.fire({
                    title: 'Échec',
                    text: 'Le rechargement de votre solde a échoué. Veuillez réessayer.',
                    icon: 'error',
                    confirmButtonColor: '#8b5cf6'
                }).then(() => {
                    window.history.replaceState({}, document.title, window.location.pathname);
                });
            }
        });

        // Initialize the cart UI on page load
        document.addEventListener('DOMContentLoaded', () => {
            loadCartFromLocalStorage(2);
            updateCartUI();
                    
                // Close cart when clicking on overlay
                document.getElementById('overlay').addEventListener('click', () => {
                document.getElementById('shopping-cart').classList.add('translate-x-full');
                document.getElementById('payment-modal').classList.add('hidden');
                document.getElementById('overlay').classList.add('hidden');
            });
        });
        
    </script>
</body>
