                    <!-- Date d'expiration et CVV -->
                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label for="card-expiry-recharge" class="block text-sm text-gray-600 mb-2">Date d'expiration</label>
                            <div class="relative">
                                <span class="absolute inset-y-0 left-0 pl-3 flex items-center text-gray-500">
                                    <i class="fas fa-calendar-alt"></i>
                                </span>
                                <input type="text" id="card-expiry-recharge" class="w-full pl-10 px-3 py-2.5 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500" placeholder="MM/AA">
                            </div>
