<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign in</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body class="bg-gradient-to-r from-purple-800 to-blue-800">
    <div class="font-sans">
        <div class="min-h-screen flex flex-col items-center justify-center py-6 px-4">
            <div class="grid md:grid-cols-2 items-center gap-4 max-w-6xl w-full">
                <div class="border border-gray-300 rounded-lg p-6 max-w-md shadow-lg bg-gray-800 bg-opacity-80">
                    <!-- Login Form -->
                    <form id="login-form" class="space-y-4" action="/login" method="POST">
                        <div class="mb-6">
                            <h3 class="text-white text-3xl font-extrabold">Sign in</h3>
                            <p class="text-gray-300 text-sm mt-2 leading-relaxed">Welcome back! Sign in to explore a world of gaming possibilities.</p>
                        </div>
                        <div>
                            <label class="text-gray-200 text-sm mb-2 block">Email</label>
                            <div class="relative flex items-center">
                                <input name="email" type="text" required class="w-full text-sm text-gray-800 border border-gray-400 px-4 py-3 rounded-lg bg-gray-700 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Enter your email" />
                            </div>
                        </div>
                        <div>
                            <label class="text-gray-200 text-sm mb-2 block">Password</label>
                            <div class="relative flex items-center">
                                <input name="password" type="password" required class="w-full text-sm text-gray-800 border border-gray-400 px-4 py-3 rounded-lg bg-gray-700 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Enter your password" />
                            </div>
                        </div>
                        <div>
                            <button type="submit" name="submit" class="w-full shadow-lg py-3 px-4 text-sm tracking-wide rounded-lg text-white bg-blue-600 hover:bg-blue-700 focus:outline-none transition duration-200">
                                Log in
                            </button>
                        </div>

                        <!-- Google Sign-In Button -->
                            <div id="g_id_onload"
                                data-client_id="16802501273-egl3p0sb8f1a4hrjp3unu1pa80ckn0o5.apps.googleusercontent.com"
                                data-context="signin"
                                data-ux_mode="popup"
                                data-login_uri="http://localhost:86/loginGoogle"
                                data-auto_prompt="false">
                            </div>

                            <div class="g_id_signin"
                                data-type="standard"
                                data-shape="rectangular"
                                data-theme="filled_blue"
                                data-text="signin_with"
                                data-size="large"
                                data-logo_alignment="left">
                            </div>

                        <p class="text-sm mt-4 text-center text-gray-200">Don't have an account? <a href="/registre" class="text-blue-400 font-semibold hover:underline">Register here</a></p>
                    </form>
                </div>

                <div class="lg:h-[400px] md:h-[300px] max-md:mt-8">
                    <img src="https://www.theautismgroup.org.uk/wp-content/uploads/2020/12/Console-Gaming-Club-1.png" class="w-full h-full max-md:w-4/5 mx-auto block object-cover rounded-lg shadow-lg" alt="Login or Register" />
                </div>
            </div>
        </div>
    </div>
    <script src="https://accounts.google.com/gsi/client" async></script>
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const urlParams = new URLSearchParams(window.location.search);
            if (urlParams.has('registre_successfully')) {
                Swal.fire({
                    title: "Success!",
                    text: "Your Account have Created successfully!",
                    icon: "success",
                    confirmButtonText: "OK",
                    timer: 3000 
                }).then(()=> {
                    window.location.href = "/login";
                });

            }
        });
        document.addEventListener("DOMContentLoaded", function() {
            const urlParams = new URLSearchParams(window.location.search);
            if (urlParams.has('compte_Susspendu')) {
                Swal.fire({
                    title: "Susspendu!",
                    text: "Your account has been suspended due to a violation of our policies. If you believe this is a mistake or would like to appeal, please contact our support team.!",
                    icon: "question",
                    confirmButtonText: "OK",
                    timer: 10000 
                }).then(()=> {
                    window.location.href = "/login";
                });

            }
        });
        document.addEventListener("DOMContentLoaded", function() {
            const urlParams = new URLSearchParams(window.location.search);
            if (urlParams.has('compte_desactiver')) {
                Swal.fire({
                    title: "DÃ©sactiver!",
                    text: "Your account is currently deactivated. Please wait for an administrator to review and activate your account. If you need assistance, contact support.!",
                    icon: "error",
                    confirmButtonText: "OK",
                    timer: 10000 
                }).then(()=> {
                    window.location.href = "/login";
                });

            }
        });
    </script>
</body>
</html>
