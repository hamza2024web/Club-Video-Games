<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign in</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap');
        
        body {
            font-family: 'Poppins', sans-serif;
            background-size: 400% 400%;
            animation: gradient 15s ease infinite;
        }
        
        @keyframes gradient {
            0% {
                background-position: 0% 50%;
            }
            50% {
                background-position: 100% 50%;
            }
            100% {
                background-position: 0% 50%;
            }
        }
        
        .glass-card {
            backdrop-filter: blur(16px) saturate(180%);
            -webkit-backdrop-filter: blur(16px) saturate(180%);
            background-color: rgba(17, 25, 40, 0.75);
            border: 1px solid rgba(255, 255, 255, 0.125);
        }
        
        .form-input {
            background-color: rgba(255, 255, 255, 0.07);
            border: 1px solid rgba(255, 255, 255, 0.1);
            transition: all 0.3s ease;
        }
        
        .form-input:focus {
            border-color: #8b5cf6;
            box-shadow: 0 0 0 3px rgba(139, 92, 246, 0.3);
            background-color: rgba(255, 255, 255, 0.1);
        }
        
        .controller-animate {
            animation: float 3s ease-in-out infinite;
        }
        
        @keyframes float {
            0% {
                transform: translateY(0px);
            }
            50% {
                transform: translateY(-15px);
            }
            100% {
                transform: translateY(0px);
            }
        }
    </style>
</head>
<body class="bg-gradient-to-br from-indigo-900 via-purple-800 to-indigo-900 min-h-screen">
    <div class="font-sans">
        <div class="min-h-screen flex flex-col items-center justify-center py-6 px-4">
            <!-- Logo -->
            <div class="mb-8 text-center">
                <div class="flex justify-center mb-2 controller-animate">
                    <i class="fas fa-gamepad text-6xl text-purple-300"></i>
                </div>
                <h1 class="text-3xl font-bold text-white">Gamers</h1>
                <p class="text-purple-200 text-sm">Welcome to the ultimate gaming community</p>
            </div>
            
            <!-- Main Content -->
            <div class="max-w-md w-full">
                <div class="glass-card rounded-xl shadow-2xl p-8 border border-purple-500/20">
                    <!-- Login Form -->
                    <form id="login-form" class="space-y-4" action="/login" method="POST">
                        <div class="mb-6">
                            <h3 class="text-white text-3xl font-extrabold">Sign in</h3>
                            <p class="text-gray-300 text-sm mt-2 leading-relaxed">Welcome back! Sign in to explore a world of gaming possibilities.</p>
                        </div>
                        <div>
                            <label class="text-gray-200 text-sm mb-2 block">Email</label>
                            <div class="relative flex items-center">
                                <input name="email" type="text" required class="form-input w-full text-sm text-white border border-gray-400 px-4 py-3 rounded-lg placeholder-gray-500 focus:outline-none" placeholder="Enter your email" />
                            </div>
                        </div>
                        <div>
                            <label class="text-gray-200 text-sm mb-2 block">Password</label>
                            <div class="relative flex items-center">
                                <input name="password" type="password" required class="form-input w-full text-sm text-white border border-gray-400 px-4 py-3 rounded-lg placeholder-gray-500 focus:outline-none" placeholder="Enter your password" />
                            </div>
                        </div>
                        <div>
                            <button type="submit" name="submit" class="w-full shadow-lg py-3 px-4 text-sm tracking-wide rounded-lg text-white bg-gradient-to-r from-purple-600 to-indigo-600 hover:from-purple-700 hover:to-indigo-700 focus:outline-none transition duration-200">
                                Log in
                            </button>
                        </div>

                        <!-- Google Sign-In Button - Preserving the original structure -->
                        <div id="g_id_onload"
                            data-client_id="16802501273-egl3p0sb8f1a4hrjp3unu1pa80ckn0o5.apps.googleusercontent.com"
                            data-context="signin"
                            data-ux_mode="popup"
                            data-login_uri="http://localhost:86/loginGoogle"
                            data-auto_prompt="false">
                        </div>

                        <div class="g_id_signin"
                            data-type="standard"
                            data-shape="rectangular"
                            data-theme="filled_blue"
                            data-text="signin_with"
                            data-size="large"
                            data-logo_alignment="left">
                        </div>

                        <p class="text-sm mt-4 text-center text-gray-200">Don't have an account? <a href="/registre" class="text-blue-400 font-semibold hover:underline">Register here</a></p>
                    </form>
                </div>
            </div>
            
            <div class="mt-8 text-center text-purple-200 text-xs">
                <p>© 2025 GamersHub. All rights reserved.</p>
            </div>
        </div>
    </div>
    <script src="https://accounts.google.com/gsi/client" async></script>
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const urlParams = new URLSearchParams(window.location.search);
            if (urlParams.has('registre_successfully')) {
                Swal.fire({
                    title: "Success!",
                    text: "Your Account have Created successfully!",
                    icon: "success",
                    confirmButtonText: "OK",
                    timer: 3000 
                }).then(()=> {
                    window.location.href = "/login";
                });

            }
        });
        document.addEventListener("DOMContentLoaded", function() {
            const urlParams = new URLSearchParams(window.location.search);
            if (urlParams.has('compte_Susspendu')) {
                Swal.fire({
                    title: "Susspendu!",
                    text: "Your account has been suspended due to a violation of our policies. If you believe this is a mistake or would like to appeal, please contact our support team.!",
                    icon: "question",
                    confirmButtonText: "OK",
                    timer: 10000 
                }).then(()=> {
                    window.location.href = "/login";
                });

            }
        });
        document.addEventListener("DOMContentLoaded", function() {
            const urlParams = new URLSearchParams(window.location.search);
            if (urlParams.has('compte_desactiver')) {
                Swal.fire({
                    title: "Désactiver!",
                    text: "Your account is currently deactivated. Please wait for an administrator to review and activate your account. If you need assistance, contact support.!",
                    icon: "error",
                    confirmButtonText: "OK",
                    timer: 10000 
                }).then(()=> {
                    window.location.href = "/login";
                });

            }
        });
    </script>
</body>
</html>