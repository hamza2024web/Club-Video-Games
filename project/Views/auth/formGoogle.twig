<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Complete Your Gamer Profile</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css">
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        gaming: {
                            purple: '#6C2BD9',
                            blue: '#3B82F6',
                            pink: '#EC4899',
                            dark: '#0F172A',
                        }
                    },
                    animation: {
                        'gradient-x': 'gradient-x 10s ease infinite',
                    },
                    keyframes: {
                        'gradient-x': {
                            '0%, 100%': {
                                'background-size': '200% 200%',
                                'background-position': 'left center'
                            },
                            '50%': {
                                'background-size': '200% 200%',
                                'background-position': 'right center'
                            },
                        },
                    },
                }
            }
        }
    </script>
    <script>
        function toggleFields() {
            const role = document.getElementById('role').value;
            const membreFields = document.getElementById('membreFields');
            const organisateurFields = document.getElementById('organisateurFields');
            
            // Hide all fields initially
            membreFields.classList.add('hidden');
            organisateurFields.classList.add('hidden');
            
            // Show fields based on selected role
            if (role === 'membre') {
                membreFields.classList.remove('hidden');
            } else if (role === 'organisateur') {
                organisateurFields.classList.remove('hidden');
            }
        }
        
        // Ensure fields are toggled on page load
        window.onload = function() {
            toggleFields();
        }
    </script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Exo+2:wght@400;500;600;700;800&family=Press+Start+2P&display=swap');
        
        body {
            font-family: 'Exo 2', sans-serif;
            background-image: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%236366F1' fill-opacity='0.09'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
        }
        
        .title-font {
            font-family: 'Press Start 2P', cursive;
        }
        
        .glow-effect {
            text-shadow: 0 0 10px rgba(99, 102, 241, 0.7);
        }
        
        .neon-border {
            box-shadow: 0 0 5px rgba(99, 102, 241, 0.5), 
                        0 0 20px rgba(99, 102, 241, 0.3);
        }
        
        .btn-effect:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px -5px rgba(99, 102, 241, 0.4);
        }
        
        .animate-gradient {
            background: linear-gradient(270deg, #818cf8, #6366f1, #4f46e5);
            background-size: 200% 200%;
            animation: gradient-x 10s ease infinite;
        }
    </style>
</head>

<body class="bg-gray-900 min-h-screen flex items-center justify-center p-4">
    <!-- Ambient background particles -->
    <div class="fixed inset-0 opacity-30 z-0">
        <div class="absolute w-4 h-4 bg-blue-400 rounded-full top-1/4 left-1/4 animate-pulse"></div>
        <div class="absolute w-3 h-3 bg-purple-400 rounded-full top-3/4 left-1/3 animate-pulse"></div>
        <div class="absolute w-5 h-5 bg-pink-400 rounded-full top-1/2 left-2/3 animate-pulse"></div>
        <div class="absolute w-4 h-4 bg-indigo-400 rounded-full top-1/3 left-3/4 animate-pulse"></div>
    </div>

    <div class="w-full max-w-md z-10">
        <!-- Main card -->
        <div class="bg-gray-800 backdrop-blur-lg bg-opacity-90 rounded-2xl shadow-2xl neon-border overflow-hidden">
            <!-- Header with gradient -->
            <div class="animate-gradient p-1">
                <div class="bg-gray-800 rounded-t-xl">
                    <!-- Logo section -->
                    <div class="flex items-center justify-center space-x-4 py-6">
                        <img src="https://lh3.googleusercontent.com/0rpHlrX8IG77awQMuUZpQ0zGWT7HRYtpncsuRnFo6V3c8Lh2hPjXnEuhDDd-OsLz1vua4ld2rlUYFAaBYk-rZCODmi2eJlwUEVsZgg" alt="Google Logo" class="w-10 h-10 object-contain" />
                        <div class="text-white font-bold text-2xl">+</div>
                        <img src="../../public/uploads/EXCPIX_-_Download_AI_Images_for_Free___Exclusive_AI_Pictures_Online-removebg-preview.png" alt="Logo Image" class="w-16 h-16 object-contain" />
                    </div>
                    
                    <!-- Title -->
                    <div class="text-center pb-6">
                        <h2 class="title-font text-xl text-transparent bg-clip-text bg-gradient-to-r from-indigo-400 to-purple-400 glow-effect">GAMER PROFILE</h2>
                        <p class="text-indigo-300 mt-2 text-sm">WELCOME BACK <span class="font-bold text-indigo-200">{{data.name}}</span></p>
                    </div>
                </div>
            </div>

            <!-- Form section -->
            <div class="p-8">
                <form class="space-y-6" method="POST" action="/googleForm" enctype="multipart/form-data">
                    <input type="text" name="name" value="{{data.name}}" class="hidden">
                    <input type="text" name="email" value="{{data.email}}" class="hidden">
                    
                    <!-- User info card -->
                    <div class="flex items-center space-x-4 p-4 bg-gray-700 bg-opacity-60 rounded-lg border-l-4 border-indigo-500">
                        <div class="w-12 h-12 rounded-full bg-indigo-600 flex items-center justify-center text-white font-bold">
                            {{data.name.charAt(0)}}
                        </div>
                        <div>
                            <p class="font-medium text-white">Google Account</p>
                            <p class="text-sm text-indigo-300">{{data.email}}</p>
                        </div>
                    </div>

                    <!-- Role selection -->
                    <div class="space-y-2">
                        <label class="block text-sm font-medium text-indigo-300 mb-1">SELECT YOUR PLAYER TYPE</label>
                        <div class="relative">
                            <select name="role" id="role" required onchange="toggleFields()" class="w-full px-4 py-3 pr-8 bg-gray-700 border-2 border-indigo-500 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-400 focus:border-transparent text-white appearance-none">
                                <option value="">Choose a Role</option>
                                <option value="membre">Member</option>
                                <option value="organisateur">Organizer</option>
                            </select>
                            <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-3 text-indigo-300">
                                <i class="fas fa-chevron-down"></i>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Member fields -->
                    <div id="membreFields" class="hidden space-y-2">
                        <label class="block text-sm font-medium text-indigo-300 mb-1">PLAYER BIRTH DATE</label>
                        <div class="relative">
                            <i class="fas fa-calendar-alt absolute left-4 top-1/2 transform -translate-y-1/2 text-indigo-400"></i>
                            <input type="date" name="naissance" class="w-full px-4 pl-10 py-3 bg-gray-700 border-2 border-indigo-500 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-400 focus:border-transparent text-white">
                        </div>
                    </div>

                    <!-- Organizer fields -->
                    <div id="organisateurFields" class="hidden space-y-2">
                        <label class="block text-sm font-medium text-indigo-300 mb-1">GAMING CLUB NAME</label>
                        <div class="relative">
                            <i class="fas fa-gamepad absolute left-4 top-1/2 transform -translate-y-1/2 text-indigo-400"></i>
                            <input type="text" name="nam_club" placeholder="Enter name of your gaming club" class="w-full px-4 pl-10 py-3 bg-gray-700 border-2 border-indigo-500 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-400 focus:border-transparent text-white placeholder-gray-500">
                        </div>
                    </div>

                    <!-- Password field -->
                    <div class="space-y-2">
                        <label class="block text-sm font-medium text-indigo-300 mb-1">PASSWORD</label>
                        <div class="relative">
                            <i class="fas fa-lock absolute left-4 top-1/2 transform -translate-y-1/2 text-indigo-400"></i>
                            <input type="password" name="password" required placeholder="Create a strong password" class="w-full px-4 pl-10 py-3 bg-gray-700 border-2 border-indigo-500 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-400 focus:border-transparent text-white placeholder-gray-500">
                        </div>
                    </div>

                    <!-- Submit button -->
                    <button type="submit" class="w-full bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-500 hover:to-purple-500 text-white py-3 rounded-lg font-medium transition-all duration-300 transform btn-effect mt-8">
                        START YOUR JOURNEY <i class="fas fa-arrow-right ml-2"></i>
                    </button>
                </form>

                <!-- Terms text -->
                <p class="mt-6 text-center text-xs text-indigo-300">
                    By continuing, you agree to our
                    <a href="#" class="text-indigo-400 hover:text-indigo-300 underline">Terms</a> and
                    <a href="#" class="text-indigo-400 hover:text-indigo-300 underline">Privacy Policy</a>
                </p>
            </div>
        </div>
        
        <!-- Credit line -->
        <div class="text-center mt-4 text-xs text-indigo-400 opacity-70">
            <p>Â© 2025 Gaming Platform | All Rights Reserved</p>
        </div>
    </div>
</body>

</html>